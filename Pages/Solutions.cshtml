<style>
    :root {
        --p-blue: #0b5eda;
        --p-indigo: #2563eb;
        --p-slate: #0f172a;
        --glass-bg: rgba(255, 255, 255, 0.02);
        --glass-border: rgba(255, 255, 255, 0.08);
    }

    /* Premium Data Grid Background - More Subtle for Corporate Look */
    .data-grid-bg {
        background-image: 
            linear-gradient(rgba(11, 94, 218, 0.02) 1px, transparent 1px),
            linear-gradient(90deg, rgba(11, 94, 218, 0.02) 1px, transparent 1px);
        background-size: 50px 50px;
    }

    /* Frosted Glass - Extra Deep Blur */
    .frosted-glass {
        background: rgba(255, 255, 255, 0.75);
        backdrop-filter: blur(50px);
        border: 1px solid rgba(255, 255, 255, 0.9);
        box-shadow: 0 10px 40px -10px rgba(31, 38, 135, 0.05);
    }
    .dark .frosted-glass {
        background: rgba(15, 23, 42, 0.7);
        border: 1px solid rgba(255, 255, 255, 0.06);
        box-shadow: 0 15px 50px -15px rgba(0, 0, 0, 0.4);
    }

    /* 3D Perspective Tilt Card - Professional Refinement */
    .corporate-card {
        transition: all 0.6s cubic-bezier(0.16, 1, 0.3, 1);
        transform-style: preserve-3d;
    }
    .corporate-card:hover {
        transform: translateY(-5px) scale(1.01);
        box-shadow: 0 20px 40px -10px rgba(11, 94, 218, 0.15);
    }

    /* Glass Shine Effect */
    .glass-shine {
        position: relative;
        overflow: hidden;
    }
    .glass-shine::after {
        content: "";
        position: absolute;
        top: -110%;
        left: -210%;
        width: 200%;
        height: 200%;
        background: linear-gradient(
            45deg,
            transparent 0%,
            rgba(255, 255, 255, 0.1) 45%,
            rgba(255, 255, 255, 0.2) 50%,
            rgba(255, 255, 255, 0.1) 55%,
            transparent 100%
        );
        transition: all 0.8s;
        z-index: 5;
    }
    .corporate-card:hover .glass-shine::after {
        top: 40%;
        left: 40%;
    }

    #particles-js-solutions {
        position: absolute;
        width: 100%;
        height: 100%;
        top: 0;
        left: 0;
        z-index: 1;
        opacity: 0.5;
    }

    .shimmer-text {
        background: linear-gradient(90deg, var(--p-blue), #60a5fa, var(--p-blue));
        background-size: 200% 100%;
        -webkit-background-clip: text;
        -webkit-text-fill-color: transparent;
        animation: shimmerText 4s linear infinite;
    }
    @@keyframes shimmerText {
        0% { background-position: -200% 0; }
        100% { background-position: 200% 0; }
    }

    /* --- Futuristic HUD & Masking --- */
    .hud-container {
        position: relative;
        width: 100%;
        height: 100%;
        overflow: hidden;
    }
    .hud-image {
        width: 100%;
        height: 100%;
        object-cover: cover;
        transition: transform 1s cubic-bezier(0.16, 1, 0.3, 1);
    }
    .corporate-card:hover .hud-image {
        transform: scale(1.1) rotate(1deg);
    }
    
    /* Brackets / Framework */
    .hud-bracket {
        position: absolute;
        width: 40px;
        height: 40px;
        border: 2px solid rgba(11, 94, 218, 0.5);
        z-index: 10;
        pointer-events: none;
    }
    .hud-bracket-tl { top: 20px; left: 20px; border-right: 0; border-bottom: 0; }
    .hud-bracket-tr { top: 20px; right: 20px; border-left: 0; border-bottom: 0; }
    .hud-bracket-bl { bottom: 20px; left: 20px; border-right: 0; border-top: 0; }
    .hud-bracket-br { bottom: 20px; right: 20px; border-left: 0; border-top: 0; }

    /* Scan Line */
    .hud-scanline {
        position: absolute;
        width: 100%;
        height: 2px;
        background: linear-gradient(90deg, transparent, #0b5eda, transparent);
        top: 0;
        left: 0;
        z-index: 11;
        opacity: 0.5;
        animation: scanMove 3s linear infinite;
        pointer-events: none;
    }
    @@keyframes scanMove { 0% { top: 0; } 100% { top: 100%; } }

    /* Branding Shields (Masking DIVs) */
    .branding-shield {
        position: absolute;
        padding: 8px 16px;
        background: rgba(15, 23, 42, 0.8);
        backdrop-filter: blur(10px);
        border: 1px solid rgba(11, 94, 218, 0.5);
        border-radius: 4px;
        color: #fff;
        font-family: 'Inter', sans-serif;
        font-size: 10px;
        font-weight: 900;
        letter-spacing: 2px;
        text-transform: uppercase;
        box-shadow: 0 0 20px rgba(11, 94, 218, 0.3);
        z-index: 20;
    }
    .shield-hawk { bottom: 15%; right: 25%; } /* Masks 'Apex' on hawk_corp.png base */
    .shield-reporting { top: 12%; left: 50%; transform: translateX(-50%); } /* Masks 'Quanta' on reporting_corp.png top */

    /* Side Tech Info */
    .hud-stats {
        position: absolute;
        left: 30px;
        top: 50%;
        transform: translateY(-50%);
        z-index: 12;
        color: rgba(11, 94, 218, 0.6);
        font-family: monospace;
        font-size: 8px;
        line-height: 1.5;
        pointer-events: none;
        text-align: left;
    }
    .hud-data-flow {
        position: absolute;
        right: 30px;
        bottom: 30px;
        z-index: 12;
        color: rgba(11, 94, 218, 0.4);
        font-family: monospace;
        font-size: 7px;
        pointer-events: none;
        text-align: right;
    }

    /* --- TECH MODULES ANIMATIONS & STYLES --- */
    .tech-module-container {
        width: 100%;
        height: 100%;
        display: flex;
        align-items: center;
        justify-content: center;
        background: radial-gradient(circle at center, rgba(11,94,218,0.05) 0%, transparent 70%);
        position: relative;
    }

    /* Module 1: Server Cluster */
    .server-cluster {
        position: relative;
        width: 140px;
        height: 180px;
        display: flex;
        flex-direction: column;
        gap: 8px;
        transform: perspective(1000px) rotateY(-15deg);
        transform-style: preserve-3d;
    }
    .server-unit {
        flex: 1;
        background: rgba(15, 23, 42, 0.9);
        border: 1px solid rgba(11, 94, 218, 0.3);
        border-radius: 6px;
        position: relative;
        overflow: hidden;
        box-shadow: 0 4px 15px rgba(0,0,0,0.3);
        display: flex;
        align-items: center;
        padding: 0 10px;
    }
    .server-unit::before { /* LED Lights */
        content: '';
        width: 6px; height: 6px;
        border-radius: 50%;
        background: #22c55e;
        box-shadow: 0 0 5px #22c55e;
        margin-right: 6px;
        animation: blink 2s infinite;
    }
    .server-unit::after { /* Data Activity */
        content: '';
        position: absolute;
        top: 0; left: 0; right: 0; bottom: 0;
        background: linear-gradient(90deg, transparent, rgba(11, 94, 218, 0.1), transparent);
        transform: translateX(-100%);
        animation: dataScan 3s infinite linear;
    }
    .tm-float-icon {
        position: absolute;
        width: 50px; height: 50px;
        border-radius: 12px;
        background: rgba(255, 255, 255, 0.05);
        backdrop-filter: blur(5px);
        border: 1px solid rgba(255, 255, 255, 0.1);
        display: flex; align-items: center; justify-content: center;
        color: #60a5fa;
        box-shadow: 0 10px 20px rgba(0,0,0,0.2);
    }
    .icon-cloud { top: 20%; right: -40px; animation: float 4s ease-in-out infinite; }
    .icon-lock { bottom: 20%; left: -40px; animation: float 5s ease-in-out infinite reverse; }

    /* Module 2: Data Turbine (Hawk ETL) */
    .turbine-container {
        position: relative;
        width: 200px; height: 200px;
        display: flex; align-items: center; justify-content: center;
    }
    .turbine-ring {
        position: absolute;
        border-radius: 50%;
        border: 2px dashed rgba(59, 130, 246, 0.3);
    }
    .ring-1 { width: 100%; height: 100%; border-color: rgba(59, 130, 246, 0.2); animation: spin 20s linear infinite; }
    .ring-2 { width: 75%; height: 75%; border-color: rgba(59, 130, 246, 0.4); border-style: solid; border-top-color: transparent; animation: spin 10s linear infinite reverse; }
    .ring-3 { width: 50%; height: 50%; border: 4px solid rgba(59, 130, 246, 0.1); border-left-color: #3b82f6; animation: spin 3s linear infinite; }
    
    .turbine-core {
        width: 40px; height: 40px;
        background: #3b82f6;
        border-radius: 50%;
        box-shadow: 0 0 30px #3b82f6;
        animation: pulseCore 2s infinite;
        z-index: 10;
        display: flex; align-items: center; justify-content: center;
    }
    .turbine-particle {
        position: absolute;
        width: 6px; height: 6px;
        background: #fff;
        border-radius: 50%;
        top: 0; left: 50%;
        transform-origin: 0 100px; /* Half of container size */
        animation: orbit 4s linear infinite;
    }

    /* Module 3: Live HUD (Reporting) */
    .hud-interface {
        width: 80%;
        height: 70%;
        background: rgba(15, 23, 42, 0.8);
        border: 1px solid rgba(59, 130, 246, 0.3);
        border-radius: 8px;
        position: relative;
        display: grid;
        grid-template-columns: 2fr 1fr;
        padding: 15px;
        gap: 15px;
        box-shadow: 0 0 20px rgba(11, 94, 218, 0.15);
    }
    .chart-area {
        display: flex;
        align-items: flex-end;
        justify-content: space-between;
        border-bottom: 2px solid rgba(255, 255, 255, 0.1);
        padding-bottom: 5px;
        height: 100%;
    }
    .bar {
        width: 15%;
        background: linear-gradient(to top, #1e3a8a, #3b82f6);
        border-radius: 3px 3px 0 0;
        animation: barAnim 3s ease-in-out infinite alternate;
    }
    .bar:nth-child(2) { animation-delay: 0.2s; }
    .bar:nth-child(3) { animation-delay: 0.5s; }
    .bar:nth-child(4) { animation-delay: 0.1s; }
    
    .stats-area {
        display: flex;
        flex-direction: column;
        gap: 10px;
    }
    .stat-item {
        background: rgba(255, 255, 255, 0.05);
        padding: 8px;
        border-radius: 4px;
        border-left: 2px solid #3b82f6;
    }
    .stat-label { font-size: 8px; color: #94a3b8; display: block; }
    .stat-value { font-size: 14px; font-weight: bold; color: #fff; font-family: monospace; }

    /* Animations */
    @@keyframes blink { 0%, 100% { opacity: 1; } 50% { opacity: 0.4; } }
    @@keyframes dataScan { 0% { transform: translateX(-100%); } 100% { transform: translateX(200%); } }
    @@keyframes float { 0%, 100% { transform: translateY(0); } 50% { transform: translateY(-10px); } }
    @@keyframes spin { 100% { transform: rotate(360deg); } }
    @@keyframes pulseCore { 0%, 100% { transform: scale(1); opacity: 1; } 50% { transform: scale(1.1); opacity: 0.8; } }
    @@keyframes orbit { 0% { transform: rotate(0deg); } 100% { transform: rotate(360deg); } }
    @@keyframes barAnim { 0% { height: 20%; } 100% { height: 80%; } }

</style>

