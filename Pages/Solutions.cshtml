@page "/solutions"
@{
    Layout = "_RevizeLayout";
    ViewData["Title"] = "Teknik Çözümler";
}

<style>
    :root {
        --p-blue: #0b5eda;
        --p-indigo: #4f46e5;
        --p-purple: #7c3aed;
        --p-slate: #0f172a;
        --glass-bg: rgba(255, 255, 255, 0.03);
        --glass-border: rgba(255, 255, 255, 0.1);
    }

    /* Premium Data Grid Background */
    .data-grid-bg {
        background-image: 
            linear-gradient(rgba(11, 94, 218, 0.03) 1px, transparent 1px),
            linear-gradient(90deg, rgba(11, 94, 218, 0.03) 1px, transparent 1px);
        background-size: 40px 40px;
    }

    /* Frosted Glass - Deep Blur */
    .frosted-glass {
        background: rgba(255, 255, 255, 0.7);
        backdrop-filter: blur(40px);
        border: 1px solid rgba(255, 255, 255, 0.8);
        box-shadow: 0 8px 32px 0 rgba(31, 38, 135, 0.07);
    }
    .dark .frosted-glass {
        background: rgba(15, 23, 42, 0.6);
        border: 1px solid rgba(255, 255, 255, 0.08);
        box-shadow: 0 8px 32px 0 rgba(0, 0, 0, 0.3);
    }

    /* 3D Perspective Tilt Card */
    .corporate-card {
        transition: all 0.5s cubic-bezier(0.23, 1, 0.32, 1);
        transform-style: preserve-3d;
    }
    .corporate-card:hover {
        transform: translateY(-10px) rotateX(2deg) rotateY(-2deg);
        box-shadow: 0 40px 80px -20px rgba(11, 94, 218, 0.15);
    }

    #particles-js-solutions {
        position: absolute;
        width: 100%;
        height: 100%;
        top: 0;
        left: 0;
        z-index: 1;
    }

    .shimmer-text {
        background: linear-gradient(90deg, #fff, #3b82f6, #fff);
        background-size: 200% 100%;
        -webkit-background-clip: text;
        -webkit-text-fill-color: transparent;
        animation: shimmerText 3s linear infinite;
    }
    @@keyframes shimmerText {
        0% { background-position: -200% 0; }
        100% { background-position: 200% 0; }
    }
</style>

