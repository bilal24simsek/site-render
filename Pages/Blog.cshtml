@page "/blog"
@inject Sitem.Web.Services.BlogService BlogService
@functions {
    // Dynamic Icon Mapping for Categories
    string GetCategoryIcon(string category) {
        return category.ToLower() switch {
            "veri mühendisliği" => "database",
            "yapay zeka" => "neurology",
            "bulut bilişim" => "cloud",
            "analitik" => "analytics",
            "yazılım geliştirme" => "code",
            _ => "label"
        };
    }
}
@{
    Layout = "_RevizeLayout";
    ViewData["Title"] = "Teknik Blog";
    
    var posts = BlogService.GetAllPosts();
    var categories = BlogService.GetCategories();
    var popularPosts = BlogService.GetPopularPosts(3);
}

<style>
    :root {
        --p-blue: #0b5eda;
        --p-indigo: #4f46e5;
        --p-purple: #7c3aed;
        --p-slate: #0f172a;
        --glass-bg: rgba(255, 255, 255, 0.03);
        --glass-border: rgba(255, 255, 255, 0.1);
    }

    body {
        background-color: #f8fafc;
    }
    .dark body {
        background-color: #020617;
    }

    /* Premium Data Grid Background */
    .data-grid-bg {
        background-image: 
            linear-gradient(rgba(11, 94, 218, 0.03) 1px, transparent 1px),
            linear-gradient(90deg, rgba(11, 94, 218, 0.03) 1px, transparent 1px);
        background-size: 40px 40px;
    }

    /* Frosted Glass - Deep Blur */
    .frosted-glass {
        background: rgba(255, 255, 255, 0.7);
        backdrop-filter: blur(40px);
        border: 1px solid rgba(255, 255, 255, 0.8);
        box-shadow: 0 8px 32px 0 rgba(31, 38, 135, 0.07);
    }
    .dark .frosted-glass {
        background: rgba(15, 23, 42, 0.6);
        border: 1px solid rgba(255, 255, 255, 0.08);
        box-shadow: 0 8px 32px 0 rgba(0, 0, 0, 0.3);
    }

    /* 3D Perspective Tilt Card - Enhanced */
    .corporate-card {
        transition: all 0.5s cubic-bezier(0.23, 1, 0.32, 1);
        transform-style: preserve-3d;
    }
    .corporate-card:hover {
        transform: translateY(-10px) rotateX(2deg) rotateY(-2deg);
        box-shadow: 0 40px 80px -20px rgba(11, 94, 218, 0.15);
    }

    /* Shimmer Effect for Buttons */
    .shimmer-btn {
        position: relative;
        overflow: hidden;
    }
    .shimmer-btn::after {
        content: "";
        position: absolute;
        top: -50%;
        left: -50%;
        width: 200%;
        height: 200%;
        background: linear-gradient(
            45deg,
            transparent 25%,
            rgba(255, 255, 255, 0.3) 50%,
            transparent 75%
        );
        background-size: 200% 200%;
        animation: shimmer 3s infinite;
    }
    @@keyframes shimmer {
        0% { transform: translate(-100%, -100%) rotate(45deg); }
        100% { transform: translate(100%, 100%) rotate(45deg); }
    }

    /* Custom Category Card Glow */
    .category-card {
        transition: all 0.3s ease;
        border: 1px solid transparent;
    }
    .category-card:hover {
        background: rgba(11, 94, 218, 0.05);
        border-color: rgba(11, 94, 218, 0.3);
        transform: scale(1.02);
    }
    .category-card.active {
        background: var(--p-blue) !important;
        color: white !important;
        box-shadow: 0 10px 20px -5px rgba(11, 94, 218, 0.4);
    }

    #particles-js-blog {
        position: absolute;
        width: 100%;
        height: 100%;
        top: 0;
        left: 0;
        z-index: 1;
    }

    /* Line Clamp */
    .line-clamp-2 {
        display: -webkit-box;
        -webkit-line-clamp: 2;
        -webkit-box-orient: vertical;
        overflow: hidden;
    }
</style>

<div class="data-grid-bg min-h-screen">
    @* Premium Bento-Grid Blog Header *@
    <section class="relative w-full pt-32 pb-20 md:pt-40 md:pb-32 overflow-hidden bg-white dark:bg-slate-950">
        <div id="particles-js-blog"></div>
        
        <!-- Abstract Tech Shapes -->
        <div class="absolute inset-0 z-0 overflow-hidden pointer-events-none">
            <div class="absolute top-[-10%] right-[-10%] w-[500px] h-[500px] bg-blue-500/10 blur-[120px] rounded-full"></div>
            <div class="absolute bottom-[-10%] left-[-10%] w-[500px] h-[500px] bg-indigo-500/10 blur-[120px] rounded-full"></div>
        </div>

        <div class="container mx-auto px-4 md:px-10 relative z-10">
            <div class="grid grid-cols-1 lg:grid-cols-12 gap-8">
                
                <!-- Main Header Card -->
                <div class="lg:col-span-8 frosted-glass p-8 md:p-16 rounded-[3rem] corporate-card" data-aos="fade-right">
                    <div class="inline-flex items-center gap-3 px-5 py-2 rounded-full bg-blue-50 dark:bg-blue-900/30 border border-blue-100 dark:border-blue-800 text-blue-600 dark:text-blue-400 text-xs font-black uppercase tracking-widest mb-10">
                        <span class="relative flex h-2 w-2">
                          <span class="animate-ping absolute inline-flex h-full w-full rounded-full bg-blue-400 opacity-75"></span>
                          <span class="relative inline-flex rounded-full h-2 w-2 bg-blue-500"></span>
                        </span>
                        Visionary Insights 2024
                    </div>
                    
                    <h1 class="text-6xl md:text-9xl font-black text-slate-900 dark:text-white leading-[0.9] tracking-tighter mb-8">
                        TEKNİK<br/>
                        <span class="text-transparent bg-clip-text bg-gradient-to-r from-blue-600 to-indigo-600 animate-text-shimmer">GELECEK</span>
                    </h1>
                    <p class="text-xl md:text-2xl text-slate-500 dark:text-slate-400 max-w-2xl font-light leading-relaxed">
                        Veri mimarisi, mühendislik yaklaşımları ve kurumsal dijital dönüşümün teknik anatomisi üzerine ufuk açıcı içerikler.
                    </p>
                </div>

                <!-- Stats & Trending Column -->
                <div class="lg:col-span-4 grid grid-cols-1 gap-8">
                    <div class="frosted-glass p-10 rounded-[3rem] corporate-card flex flex-col justify-between overflow-hidden relative group" data-aos="fade-left">
                        <div class="absolute -right-10 -bottom-10 text-slate-100 dark:text-white/5 font-black text-[12rem] select-none group-hover:rotate-12 transition-transform">01</div>
                        <div class="relative z-10">
                            <p class="text-[10px] font-black uppercase tracking-[0.3em] text-blue-600 mb-4">Content Library</p>
                            <h3 class="text-7xl font-black text-slate-900 dark:text-white mb-2">@posts.Count<span class="text-2xl text-slate-400 align-top ml-1">+</span></h3>
                            <p class="text-sm text-slate-500 font-bold">Teknik Makale Yayında</p>
                        </div>
                    </div>

                    <div class="frosted-glass p-10 rounded-[3rem] corporate-card flex flex-col justify-between" data-aos="fade-left" data-aos-delay="100">
                         <div class="space-y-6">
                            <div class="flex items-center justify-between">
                                <span class="text-[10px] font-black uppercase tracking-[0.3em] text-indigo-600">Active Tags</span>
                                <span class="material-symbols-outlined text-indigo-600">shutter_speed</span>
                            </div>
                            <div class="flex flex-wrap gap-2">
                                @foreach(var cat in categories.Take(5)) {
                                    <span class="px-4 py-2 rounded-xl bg-slate-100 dark:bg-white/5 text-slate-600 dark:text-slate-300 text-[10px] font-black uppercase border border-slate-200/50 dark:border-white/5 hover:bg-indigo-600 hover:text-white transition-all cursor-default tracking-wider">@cat.Key</span>
                                }
                            </div>
                         </div>
                    </div>
                </div>
            </div>
        </div>
    </section>

    <!-- Content Section -->
    <div class="container mx-auto px-4 md:px-10 py-32">
        <div class="grid grid-cols-1 lg:grid-cols-12 gap-12">
            
            <!-- Article Stream -->
            <main class="lg:col-span-8 space-y-12">
                <div class="flex items-center justify-between mb-16 px-4">
                    <h2 class="text-4xl font-black text-slate-900 dark:text-white tracking-tight">Son Yayınlar</h2>
                    <div class="h-[1px] flex-1 bg-slate-200 dark:bg-white/10 mx-8"></div>
                    <div class="flex gap-2">
                        <button class="w-10 h-10 rounded-full border border-slate-200 dark:border-white/10 flex items-center justify-center text-slate-400 hover:border-blue-600 hover:text-blue-600 transition-all">
                            <span class="material-symbols-outlined">grid_view</span>
                        </button>
                        <button class="w-10 h-10 rounded-full bg-blue-600 flex items-center justify-center text-white shadow-lg shadow-blue-500/30">
                            <span class="material-symbols-outlined">view_stream</span>
                        </button>
                    </div>
                </div>

                <div id="blog-posts-container" class="space-y-10">
                    @foreach (var post in posts)
                    {
                        <article class="frosted-glass rounded-[2.5rem] overflow-hidden corporate-card group" data-category="@post.Category" data-aos="fade-up">
                            <div class="flex flex-col md:flex-row p-4 md:p-6 gap-8">
                                <!-- Image Container -->
                                <div class="w-full md:w-1/3 shrink-0 relative">
                                    <div class="aspect-[4/5] rounded-3xl overflow-hidden shadow-2xl relative">
                                        <img src="@post.ImageUrl" class="w-full h-full object-cover group-hover:scale-110 transition-transform duration-700" alt="@post.Title" />
                                        <div class="absolute inset-0 bg-gradient-to-t from-slate-900/80 via-transparent to-transparent opacity-60"></div>
                                        <div class="absolute top-4 left-4">
                                            <span class="px-4 py-2 rounded-xl bg-blue-600 text-white text-[10px] font-black uppercase tracking-widest backdrop-blur-md">@post.Category</span>
                                        </div>
                                    </div>
                                </div>
                                
                                <!-- Content -->
                                <div class="flex-1 py-4 flex flex-col justify-between">
                                    <div class="space-y-4">
                                        <div class="flex items-center gap-4 text-[10px] font-black text-slate-400 uppercase tracking-[0.2em] mb-4">
                                            <span class="flex items-center gap-1"><span class="material-symbols-outlined text-sm">calendar_today</span> @post.PublishDate.ToString("dd MMM yyyy")</span>
                                            <span class="text-slate-200 dark:text-white/10">|</span>
                                            <span class="flex items-center gap-1"><span class="material-symbols-outlined text-sm">schedule</span> 6 Dakika Okuma</span>
                                        </div>
                                        <h3 class="text-3xl font-black text-slate-900 dark:text-white leading-tight group-hover:text-blue-600 transition-colors">
                                            <a href="/blog-detay/@post.Slug">@post.Title</a>
                                        </h3>
                                        <p class="text-lg text-slate-500 dark:text-slate-400 font-light leading-relaxed line-clamp-2">@post.Summary</p>
                                    </div>
                                    
                                    <div class="mt-8 pt-6 border-t border-slate-100 dark:border-white/5 flex items-center justify-between">
                                        <a href="/blog-detay/@post.Slug" class="flex items-center gap-3 text-blue-600 dark:text-blue-400 font-black text-sm group/btn shimmer-btn px-6 py-2.5 rounded-full hover:bg-blue-600 hover:text-white transition-all">
                                            MAKALE DETAYI
                                            <span class="material-symbols-outlined transition-transform group-hover/btn:translate-x-2">arrow_right_alt</span>
                                        </a>
                                        <div class="flex -space-x-3 hover:space-x-1 transition-all">
                                            <div class="w-10 h-10 rounded-full border-2 border-white dark:border-slate-900 bg-slate-100 dark:bg-slate-800 flex items-center justify-center text-slate-400 hover:z-10 cursor-pointer">
                                                <span class="material-symbols-outlined text-sm">share</span>
                                            </div>
                                            <div class="w-10 h-10 rounded-full border-2 border-white dark:border-slate-900 bg-slate-100 dark:bg-slate-800 flex items-center justify-center text-slate-400 hover:z-10 cursor-pointer">
                                                <span class="material-symbols-outlined text-sm">bookmark</span>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </article>
                    }
                </div>
            </main>

            <!-- Sidebar -->
            <aside class="lg:col-span-4 space-y-12">
                <!-- Advanced Search Module -->
                <div class="frosted-glass p-10 rounded-[3rem] corporate-card" data-aos="fade-left">
                    <div class="space-y-4">
                        <label class="text-[10px] font-black uppercase text-slate-400 tracking-[0.3em]">Quick Search</label>
                        <div class="relative group">
                            <input class="w-full rounded-2xl border-2 border-transparent bg-slate-50 dark:bg-slate-800/80 text-slate-950 dark:text-white placeholder-slate-400 pl-14 pr-6 py-5 outline-none font-bold transition-all focus:bg-white dark:focus:bg-slate-900 focus:border-blue-500/30" 
                                   placeholder="Teknik araştırma..." type="text" onkeyup="searchBlog(this.value)"/>
                            <span class="material-symbols-outlined absolute left-5 top-1/2 -translate-y-1/2 text-slate-400 group-focus-within:text-blue-600 transition-colors">terminal</span>
                            <div class="absolute right-5 top-1/2 -translate-y-1/2 hidden md:block">
                                <span class="px-2 py-1 rounded bg-slate-200 dark:bg-white/10 text-[8px] font-bold text-slate-400 tracking-tighter shadow-sm uppercase">CTRL + K</span>
                            </div>
                        </div>
                    </div>
                </div>

                <!-- Premium Categories Module -->
                <div class="frosted-glass p-10 rounded-[3rem] corporate-card" data-aos="fade-left" data-aos-delay="100">
                    <div class="flex items-center justify-between mb-10">
                        <h4 class="text-xl font-black text-slate-900 dark:text-white">Taksonomiler</h4>
                        <span class="px-3 py-1 rounded-full bg-blue-100 dark:bg-blue-900/30 text-blue-600 text-[10px] font-black">@categories.Count</span>
                    </div>
                    <div class="space-y-3" id="category-list">
                        <button onclick="filterBlog('all')" class="category-card active w-full flex items-center justify-between p-5 rounded-[1.5rem] bg-slate-50 dark:bg-white/5 text-slate-600 dark:text-slate-300 font-bold hover:shadow-lg">
                            <div class="flex items-center gap-4">
                                <span class="material-symbols-outlined opacity-70">apps</span>
                                <span>Tüm Yazılar</span>
                            </div>
                            <span class="material-symbols-outlined text-sm opacity-50">chevron_right</span>
                        </button>
                        @foreach (var category in categories)
                        {
                            <button onclick="filterBlog('@category.Key')" class="category-card w-full flex items-center justify-between p-5 rounded-[1.5rem] bg-slate-50 dark:bg-white/5 text-slate-600 dark:text-slate-300 font-bold">
                                <div class="flex items-center gap-4">
                                    <span class="material-symbols-outlined opacity-70 text-blue-600">@GetCategoryIcon(category.Key)</span>
                                    <span>@category.Key</span>
                                </div>
                                <div class="flex items-center gap-2">
                                    <span class="text-[10px] font-black opacity-50">@category.Value</span>
                                    <span class="material-symbols-outlined text-sm opacity-50">chevron_right</span>
                                </div>
                            </button>
                        }
                    </div>
                </div>

                <!-- Trending Modules with Thumbnails -->
                <div class="frosted-glass p-10 rounded-[3rem] corporate-card" data-aos="fade-left" data-aos-delay="200">
                    <h4 class="text-xl font-black text-slate-900 dark:text-white mb-10">Trend Araştırmalar</h4>
                    <div class="space-y-8">
                        @foreach (var popPost in popularPosts)
                        {
                            <a href="/blog-detay/@popPost.Slug" class="group flex gap-4 items-center">
                                <div class="w-20 h-20 rounded-2xl overflow-hidden shrink-0 shadow-lg">
                                    <img src="@popPost.ImageUrl" class="w-full h-full object-cover group-hover:scale-125 transition-transform duration-500" />
                                </div>
                                <div class="space-y-1">
                                    <p class="text-blue-600 text-[8px] font-black uppercase tracking-widest">@popPost.Category</p>
                                    <h5 class="font-black text-slate-800 dark:text-slate-100 group-hover:text-blue-600 transition-colors leading-tight text-sm line-clamp-2">@popPost.Title</h5>
                                </div>
                            </a>
                        }
                    </div>
                </div>

                <!-- Newsletter / Social Sidebar -->
                <div class="p-10 rounded-[3rem] bg-gradient-to-br from-blue-600 to-indigo-800 text-white shadow-2xl relative overflow-hidden group corporate-card" data-aos="fade-up">
                    <div class="absolute -right-20 -top-20 w-64 h-64 bg-white/10 rounded-full blur-3xl group-hover:scale-150 transition-transform duration-1000"></div>
                    <div class="relative z-10 space-y-6">
                        <span class="material-symbols-outlined text-5xl">alternate_email</span>
                        <h4 class="text-3xl font-black leading-tight">Visionary<br/>Updates</h4>
                        <p class="text-blue-100 font-light leading-relaxed">Yeni nesil veri yaklaşımlarından ilk siz haberdar olun.</p>
                        <div class="pt-4">
                            <button class="w-full py-5 px-8 rounded-2xl bg-white text-blue-600 font-black text-xs tracking-widest hover:scale-105 active:scale-95 transition-all shadow-2xl uppercase">
                                ABONE OL
                            </button>
                        </div>
                    </div>
                </div>
            </aside>
        </div>
    </div>
</div>

@section Scripts {
    <script src="https://cdn.jsdelivr.net/particles.js/2.0.0/particles.min.js"></script>
    <script>
        function initParticles() {
            if(window.particlesJS) {
                particlesJS('particles-js-blog', {
                    "particles": {
                        "number": { "value": 40, "density": { "enable": true, "value_area": 800 } },
                        "color": { "value": "#3b82f6" },
                        "shape": { "type": "circle" },
                        "opacity": { "value": 0.2, "random": true },
                        "size": { "value": 3, "random": true },
                        "line_linked": { "enable": true, "distance": 150, "color": "#3b82f6", "opacity": 0.1, "width": 1 },
                        "move": { "enable": true, "speed": 0.8, "direction": "none", "random": true, "straight": false, "out_mode": "out", "bounce": false }
                    },
                    "interactivity": {
                        "detect_on": "canvas",
                        "events": { "onhover": { "enable": true, "mode": "grab" }, "onclick": { "enable": true, "mode": "push" }, "resize": true }
                    },
                    "retina_detect": true
                });
            }
        }
        initParticles();

        function initTilt() {
            document.querySelectorAll('.corporate-card').forEach(card => {
                card.addEventListener('mousemove', e => {
                    const rect = card.getBoundingClientRect();
                    const x = e.clientX - rect.left;
                    const y = e.clientY - rect.top;
                    const centerX = rect.width / 2;
                    const centerY = rect.height / 2;
                    const rotateX = (y - centerY) / 25;
                    const rotateY = (centerX - x) / 25;
                    card.style.transform = `perspective(2000px) rotateX(${rotateX}deg) rotateY(${rotateY}deg) translateY(-8px)`;
                });
                card.addEventListener('mouseleave', () => {
                    card.style.transform = `perspective(2000px) rotateX(0deg) rotateY(0deg) translateY(0)`;
                });
            });
        }
        initTilt();

        function filterBlog(category) {
            // Update active state in sidebar
            const buttons = document.querySelectorAll('.category-card');
            buttons.forEach(btn => {
                btn.classList.remove('active');
                if (btn.innerText.includes(category) || (category === 'all' && btn.innerText.includes('Tüm Yazılar'))) {
                    btn.classList.add('active');
                }
            });

            const articles = document.querySelectorAll('#blog-posts-container article');
            articles.forEach(article => {
                const articleCategory = article.getAttribute('data-category');
                if (category === 'all' || articleCategory === category) {
                    article.style.display = 'block';
                    article.style.opacity = '0';
                    setTimeout(() => {
                        article.style.opacity = '1';
                        article.style.transition = 'opacity 0.6s cubic-bezier(0.16, 1, 0.3, 1)';
                    }, 50);
                } else {
                    article.style.display = 'none';
                }
            });
        }
        
        function searchBlog(query) {
             const articles = document.querySelectorAll('#blog-posts-container article');
             const lowerQuery = query.toLowerCase();
             articles.forEach(article => {
                const title = article.querySelector('h3').textContent.toLowerCase();
                const summary = article.querySelector('p').textContent.toLowerCase();
                 if (title.includes(lowerQuery) || summary.includes(lowerQuery)) {
                    article.style.display = 'block';
                } else {
                    article.style.display = 'none';
                }
            });
        }

        // Add keyboard shortcut listener
        document.addEventListener('keydown', (e) => {
            if ((e.ctrlKey || e.metaKey) && e.key === 'k') {
                e.preventDefault();
                document.querySelector('input[type="text"]').focus();
            }
        });
    </script>
}


