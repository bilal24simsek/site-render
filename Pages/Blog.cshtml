@page "/blog"
@inject Sitem.Web.Services.BlogService BlogService
@{
    Layout = "_RevizeLayout";
    ViewData["Title"] = "Blog";
    
    // Get filter from query string if any (optional enhancement, but for now we list all)
    var posts = BlogService.GetAllPosts();
    var categories = BlogService.GetCategories();
    var popularPosts = BlogService.GetPopularPosts(3);
}

@* Hero Section *@
<section class="relative w-full mb-16 lg:mb-24">
    <div class="hero-wrapper relative w-full h-[500px] lg:h-[600px] overflow-hidden border-b border-slate-200 dark:border-white/5 bg-slate-900">
         <div id="particles-js-blog" class="absolute inset-0 z-20 pointer-events-none mix-blend-screen"></div>
        <div class="hero-slide active h-full w-full absolute inset-0 flex items-center justify-center text-center px-4">
             <div class="hero-bg absolute inset-0 bg-cover bg-center z-0" style="background-image: linear-gradient(135deg, rgba(10,16,32,0.85), rgba(13,31,74,0.75)), url('https://images.unsplash.com/photo-1499750310159-54f8f0529185?auto=format&fit=crop&w=1600&q=80');"></div>
             <div class="hero-content relative z-10 max-w-5xl mx-auto space-y-6 md:space-y-8">
                <span class="inline-block py-1.5 px-4 rounded-full bg-blue-500/20 text-blue-200 text-xs md:text-sm font-bold tracking-wider uppercase backdrop-blur-sm border border-blue-500/30">Blog</span>
                <h1 class="text-4xl sm:text-5xl md:text-7xl font-black text-white leading-[1.1] tracking-tight">Teknik<br/><span class="text-transparent bg-clip-text bg-gradient-to-r from-blue-400 to-purple-400 animate-text-shimmer">İçgörüler</span></h1>
                <p class="text-slate-300 text-lg md:text-2xl font-medium max-w-3xl mx-auto leading-relaxed">Veri mühendisliği, ETL ve büyük veri teknolojileri üzerine en güncel makaleler.</p>
             </div>
        </div>
    </div>
</section>

<div class="px-4 md:px-10 py-10 max-w-7xl mx-auto">
    <div class="flex flex-wrap gap-2 mb-6 text-sm">
        <a class="text-slate-500 dark:text-slate-400 hover:text-primary dark:hover:text-primary transition-colors" href="/">Anasayfa</a>
        <span class="text-slate-400 dark:text-slate-500">/</span>
        <span class="text-slate-900 dark:text-white font-medium">Teknik Yazılar</span>
    </div>

    <div class="grid grid-cols-1 lg:grid-cols-12 gap-8">
        <!-- Main Content -->
        <div class="lg:col-span-8 space-y-8" id="blog-posts-container">
            @foreach (var post in posts)
            {
                <article class="group relative rounded-[2rem] bg-slate-50 dark:bg-slate-900 border border-slate-200 dark:border-slate-800 hover:border-blue-500/30 dark:hover:border-blue-500/30 transition-all duration-300 hover:shadow-2xl hover:shadow-blue-500/10 hover:-translate-y-1 overflow-hidden" data-category="@post.Category">
                     <div class="absolute inset-0 bg-gradient-to-r from-blue-500/5 to-transparent opacity-0 group-hover:opacity-100 transition-opacity duration-300"></div>
                    <div class="relative z-10 flex flex-col md:flex-row gap-8 p-6">
                        <div class="w-full md:w-2/5 flex-shrink-0">
                            <div class="w-full aspect-[4/3] md:aspect-square lg:aspect-video bg-cover bg-center rounded-2xl overflow-hidden shadow-md" style="background-image: url('@post.ImageUrl');">
                                 <div class="w-full h-full bg-black/0 group-hover:bg-black/10 transition-colors duration-300"></div>
                            </div>
                        </div>
                        <div class="flex-1 flex flex-col justify-center gap-3">
                            <div class="flex items-center gap-3 mb-1">
                                 <span class="px-3 py-1 rounded-full text-xs font-bold bg-blue-100 dark:bg-blue-900/30 text-blue-600 dark:text-blue-400">@post.Category</span>
                                 <span class="text-slate-400 text-xs">•</span>
                                 <span class="text-slate-500 text-xs font-medium">@post.PublishDate.ToString("dd MMMM yyyy")</span>
                            </div>
                            <h2 class="text-slate-900 dark:text-white text-2xl font-black leading-tight group-hover:text-blue-600 dark:group-hover:text-blue-400 transition-colors">
                                <a href="/blog-detay/@post.Slug">@post.Title</a>
                            </h2>
                            <p class="text-slate-600 dark:text-slate-400 text-base leading-relaxed line-clamp-2">@post.Summary</p>
                            
                            <div class="mt-auto pt-4 flex items-center gap-2 text-blue-600 dark:text-blue-400 font-bold text-sm tracking-wide cursor-pointer" onclick="window.location.href='/blog-detay/@post.Slug'">
                                Devamını Oku 
                                <span class="material-symbols-outlined text-lg transition-transform group-hover:translate-x-1">arrow_forward</span>
                            </div>
                        </div>
                    </div>
                </article>
            }
        </div>

        <!-- Sidebar -->
        <aside class="lg:col-span-4 space-y-8">
            <!-- Search -->
            <div class="p-8 rounded-[2rem] bg-slate-50 dark:bg-slate-900 border border-slate-200 dark:border-slate-800">
                <div class="relative group">
                    <input class="w-full rounded-xl border-2 border-transparent bg-white dark:bg-slate-800 text-slate-900 dark:text-white placeholder-slate-400 pl-12 py-4 shadow-sm group-hover:shadow-md focus:shadow-lg focus:border-primary/50 transition-all outline-none font-medium" placeholder="Yazılarda Ara..." type="text" onkeyup="searchBlog(this.value)"/>
                    <span class="material-symbols-outlined absolute left-4 top-1/2 -translate-y-1/2 text-slate-400 group-hover:text-primary transition-colors text-2xl">search</span>
                </div>
            </div>

            <!-- Categories -->
            <div class="p-8 rounded-[2rem] bg-slate-50 dark:bg-slate-900 border border-slate-200 dark:border-slate-800">
                <h3 class="text-xl font-black text-slate-900 dark:text-white mb-6 flex items-center gap-3">
                    <span class="w-2 h-8 bg-gradient-to-b from-primary to-blue-600 rounded-full"></span>
                    Kategoriler
                </h3>
                <ul class="space-y-3" id="category-list">
                    <li><a class="flex justify-between items-center text-slate-600 dark:text-slate-400 hover:text-white transition-all group p-3 hover:bg-primary rounded-xl hover:shadow-lg hover:shadow-primary/30 cursor-pointer" onclick="filterBlog('all')">
                        <span class="font-bold">Tüm Yazılar</span>
                        <span class="text-xs font-bold bg-white text-slate-600 rounded-md px-2 py-1 group-hover:text-primary transition-colors">@posts.Count</span>
                    </a></li>
                    @foreach (var category in categories)
                    {
                        <li><a class="flex justify-between items-center text-slate-600 dark:text-slate-400 hover:text-white transition-all group p-3 hover:bg-primary rounded-xl hover:shadow-lg hover:shadow-primary/30 cursor-pointer" onclick="filterBlog('@category.Key')">
                            <span class="font-bold">@category.Key</span>
                            <span class="text-xs font-bold bg-white text-slate-600 rounded-md px-2 py-1 group-hover:text-primary transition-colors">@category.Value</span>
                        </a></li>
                    }
                </ul>
            </div>

            <!-- Popular -->
            <div class="p-8 rounded-[2rem] bg-slate-50 dark:bg-slate-900 border border-slate-200 dark:border-slate-800">
                <h3 class="text-xl font-black text-slate-900 dark:text-white mb-6 flex items-center gap-3">
                    <span class="w-2 h-8 bg-gradient-to-b from-primary to-blue-600 rounded-full"></span>
                    Popüler Yazılar
                </h3>
                <ul class="space-y-6">
                    @{ int i = 1; }
                    @foreach (var popPost in popularPosts)
                    {
                        <li class="@(i > 1 ? "border-t border-slate-100 dark:border-slate-800 pt-6" : "")">
                            <a class="group block" href="/blog-detay/@popPost.Slug">
                                <div class="flex gap-4 items-start">
                                    <div class="font-black text-4xl text-slate-200 dark:text-slate-800 leading-none group-hover:text-primary/20 transition-colors">0@(i++)</div>
                                    <div>
                                        <p class="font-bold text-slate-800 dark:text-slate-200 group-hover:text-primary transition-colors line-clamp-2 leading-tight">@popPost.Title</p>
                                        <p class="text-xs text-slate-500 dark:text-slate-500 mt-2 flex items-center gap-1 font-medium">
                                            <span class="material-symbols-outlined text-[14px]">calendar_today</span> @popPost.PublishDate.ToString("dd MMMM yyyy")
                                        </p>
                                    </div>
                                </div>
                            </a>
                        </li>
                    }
                </ul>
            </div>
        </aside>
    </div>
</div>

@section Scripts {
    <script>
        if(window.particlesJS) {
            particlesJS('particles-js-blog', {
              "particles": { "number": { "value": 30, "density": { "enable": true, "value_area": 800 } }, "color": { "value": "#ffffff" }, "shape": { "type": "circle" }, "opacity": { "value": 0.2, "random": false }, "size": { "value": 2, "random": false }, "line_linked": { "enable": true, "distance": 150, "color": "#ffffff", "opacity": 0.1, "width": 1 }, "move": { "enable": true, "speed": 0.4, "direction": "right", "random": false, "straight": false, "out_mode": "out", "bounce": false } },
              "interactivity": { "detect_on": "canvas", "events": { "onhover": { "enable": false }, "onclick": { "enable": false }, "resize": true } },
              "retina_detect": true
            });
        }

        // Blog Filter Script
        function filterBlog(category) {
            const articles = document.querySelectorAll('#blog-posts-container article');
            articles.forEach(article => {
                const articleCategory = article.getAttribute('data-category');
                if (category === 'all' || articleCategory === category) {
                    article.style.display = 'block';
                    article.classList.remove('animate-fade-in');
                    void article.offsetWidth; 
                    article.classList.add('animate-fade-in');
                } else {
                    article.style.display = 'none';
                }
            });
        }
        
        // Simple search
        function searchBlog(query) {
             const articles = document.querySelectorAll('#blog-posts-container article');
             const lowerQuery = query.toLowerCase();
             articles.forEach(article => {
                const title = article.querySelector('h2').textContent.toLowerCase();
                const summary = article.querySelector('p').textContent.toLowerCase();
                 if (title.includes(lowerQuery) || summary.includes(lowerQuery)) {
                    article.style.display = 'block';
                } else {
                    article.style.display = 'none';
                }
            });
        }
    </script>
}


