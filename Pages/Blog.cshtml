@page "/blog"
@inject Sitem.Web.Services.BlogService BlogService
@functions {
    // Dynamic Icon Mapping for Categories
    string GetCategoryIcon(string category) {
        return category.ToLower() switch {
            "veri mühendisliği" => "database",
            "yapay zeka" => "neurology",
            "bulut bilişim" => "cloud",
            "analitik" => "analytics",
            "yazılım geliştirme" => "code",
            _ => "label"
        };
    }
}
@{
    Layout = "_RevizeLayout";
    ViewData["Title"] = "Teknik Blog";
    
    var posts = BlogService.GetAllPosts();
    var categories = BlogService.GetCategories();
    var popularPosts = BlogService.GetPopularPosts(3);
}

<style>
    :root {
        --p-blue: #0b5eda;
        --p-indigo: #4f46e5;
        --p-slate: #0f172a;
        --bento-radius: 2.5rem;
    }

    body {
        background-color: #f8fafc;
    }
    .dark body {
        background-color: #020617;
    }

    /* Premium Grid Background */
    .data-grid-bg {
        background-image: 
            linear-gradient(rgba(11, 94, 218, 0.02) 1px, transparent 1px),
            linear-gradient(90deg, rgba(11, 94, 218, 0.02) 1px, transparent 1px);
        background-size: 50px 50px;
    }

    /* Bento/Corporate Card Base */
    .bento-card, .corporate-card {
        background: #ffffff;
        border-radius: var(--bento-radius);
        border: 1px solid rgba(0, 0, 0, 0.03);
        transition: all 0.4s cubic-bezier(0.165, 0.84, 0.44, 1);
        overflow: hidden;
        position: relative;
    }
    .dark .bento-card, .dark .corporate-card {
        background: rgba(15, 23, 42, 0.6);
        border: 1px solid rgba(255, 255, 255, 0.05);
    }

    /* Frosted Glass Effect for Sidebar */
    .frosted-glass {
        background: rgba(255, 255, 255, 0.7);
        backdrop-filter: blur(40px);
        border: 1px solid rgba(255, 255, 255, 0.8);
        box-shadow: 0 8px 32px 0 rgba(31, 38, 135, 0.07);
    }
    .dark .frosted-glass {
        background: rgba(15, 23, 42, 0.6);
        border: 1px solid rgba(255, 255, 255, 0.08);
    }

    /* Hover Interaction - Requested Professional Look */
    .bento-card:hover, .corporate-card:hover {
        transform: translateY(-4px) scale(1.005);
        box-shadow: 0 25px 50px -12px rgba(11, 94, 218, 0.08);
        border-color: rgba(11, 94, 218, 0.1);
    }
    .dark .bento-card:hover, .dark .corporate-card:hover {
        box-shadow: 0 25px 50px -12px rgba(0, 0, 0, 0.6);
    }

    .text-huge {
        font-size: clamp(3rem, 8vw, 6.5rem);
        line-height: 0.9;
        letter-spacing: -0.04em;
    }

    /* Category Card Styles */
    .category-card {
        transition: all 0.3s ease;
        border: 1px solid transparent;
    }
    .category-card:hover {
        background: rgba(11, 94, 218, 0.05);
        border-color: rgba(11, 94, 218, 0.3);
    }
    .category-card.active {
        background: var(--p-blue) !important;
        color: white !important;
        box-shadow: 0 10px 20px -5px rgba(11, 94, 218, 0.4);
    }

    /* Hero Grid Layout */
    .hero-grid {
        display: grid;
        grid-template-columns: repeat(12, 1fr);
        grid-template-rows: repeat(2, auto);
        gap: 1.5rem;
    }

    #particles-js-blog {
        position: absolute;
        width: 100%;
        height: 100%;
        top: 0;
        left: 0;
        pointer-events: none;
    }

    .line-clamp-2 {
        display: -webkit-box;
        -webkit-line-clamp: 2;
        -webkit-box-orient: vertical;
        overflow: hidden;
    }
</style>

<div class="data-grid-bg min-h-screen pb-32">
    @* Keep the Bento Hero Section as Requested *@
    <section class="relative w-full pt-32 pb-16 overflow-hidden">
        <div id="particles-js-blog"></div>
        <div class="container mx-auto px-4 md:px-10 relative z-10">
            <div class="hero-grid">
                @{
                    var featuredPost = posts.FirstOrDefault();
                }
                <!-- 1. FEATURED ARTICLE CARD (Left - Large) -->
                <div class="col-span-12 lg:col-span-8 row-span-2 bento-card relative overflow-hidden group min-h-[500px]" data-aos="fade-right">
                    @if (featuredPost != null)
                    {
                        <!-- Background Image with Overlay -->
                        <div class="absolute inset-0">
                            <img src="@featuredPost.ImageUrl" class="w-full h-full object-cover transition-transform duration-700 group-hover:scale-105" alt="@featuredPost.Title">
                            <div class="absolute inset-0 bg-gradient-to-t from-slate-900 via-slate-900/60 to-transparent opacity-90"></div>
                        </div>
                        
                        <!-- Content -->
                        <div class="relative z-10 h-full flex flex-col justify-end p-8 md:p-12">
                            <div class="mb-6">
                                <span class="px-4 py-2 rounded-lg bg-blue-600/90 text-white text-[10px] font-black uppercase tracking-widest backdrop-blur-sm">
                                    VİTRİN MAKALESİ
                                </span>
                            </div>
                            <h2 class="text-3xl md:text-5xl font-black text-white mb-6 leading-tight max-w-2xl">
                                @featuredPost.Title
                            </h2>
                            <p class="text-lg text-slate-300 font-light line-clamp-2 max-w-xl mb-8">
                                @featuredPost.Summary
                            </p>
                            <a href="/blog-detay/@featuredPost.Slug" class="inline-flex items-center gap-3 px-8 py-4 bg-white text-slate-900 rounded-2xl font-black text-xs uppercase tracking-widest hover:bg-blue-50 transition-colors w-fit group/btn">
                                Hemen Oku
                                <span class="material-symbols-outlined text-lg group-hover/btn:translate-x-1 transition-transform">arrow_right_alt</span>
                            </a>
                        </div>
                    }
                </div>

                <!-- 2. NEWSLETTER CARD (Top Right) -->
                <div class="col-span-12 lg:col-span-4 bento-card p-8 flex flex-col justify-between relative overflow-hidden" data-aos="fade-left">
                    <div class="absolute -right-10 -top-10 w-40 h-40 bg-blue-500/10 rounded-full blur-3xl"></div>
                    <div>
                        <div class="flex items-center justify-between mb-6">
                            <span class="text-[10px] font-black uppercase tracking-[0.3em] text-blue-600">BÜLTEN</span>
                            <span class="material-symbols-outlined text-blue-600 text-3xl">mark_email_unread</span>
                        </div>
                        <h3 class="text-2xl font-black text-slate-900 dark:text-white mb-4">Teknoloji Gündemini Yakalayın</h3>
                        <p class="text-xs text-slate-500 font-medium mb-6 leading-relaxed">Yeni nesil veri mimarileri ve yapay zeka gelişmeleri haftalık bülteninizde.</p>
                    </div>
                    <div class="relative group">
                         <input type="email" placeholder="E-posta adresiniz" class="w-full bg-slate-50 dark:bg-white/5 border border-slate-200 dark:border-white/10 rounded-xl px-4 py-3 text-xs font-bold outline-none focus:border-blue-500 transition-colors pr-12 text-slate-900 dark:text-white" />
                         <button class="absolute right-2 top-1/2 -translate-y-1/2 w-8 h-8 rounded-lg bg-blue-600 flex items-center justify-center text-white hover:bg-blue-700 transition-colors shadow-lg shadow-blue-600/20">
                             <span class="material-symbols-outlined text-sm">arrow_forward</span>
                         </button>
                    </div>
                </div>

                <!-- 3. VISUAL CATEGORIES CARD (Bottom Right) -->
                <div class="col-span-12 lg:col-span-4 bento-card p-8 flex flex-col" data-aos="fade-left" data-aos-delay="150">
                    <div class="flex items-center justify-between mb-6">
                        <span class="text-[10px] font-black uppercase tracking-[0.3em] text-blue-600">KEŞFET</span>
                        <span class="material-symbols-outlined text-slate-400 text-xl">explore</span>
                    </div>
                    <div class="grid grid-cols-2 gap-3 flex-1 content-start">
                        @foreach(var cat in categories.Take(4)) {
                            <button onclick="filterBlog('@cat.Key')" class="group flex flex-col items-center justify-center p-4 rounded-2xl bg-slate-50 dark:bg-white/5 hover:bg-blue-600 transition-all border border-transparent hover:border-blue-500/30 cursor-pointer text-center gap-2">
                                <span class="material-symbols-outlined text-blue-600 group-hover:text-white transition-colors text-2xl">@GetCategoryIcon(cat.Key)</span>
                                <span class="text-[10px] font-black uppercase text-slate-600 dark:text-slate-300 group-hover:text-white transition-colors">@cat.Key</span>
                            </button>
                        }
                    </div>
                </div>
            </div>
        </div>
    </section>

    @* Restore Classic Blog Content Structure (Sidebar + Stream) *@
    <div class="container mx-auto px-4 md:px-10 py-16">
        <div class="grid grid-cols-1 lg:grid-cols-12 gap-12">
            
            <!-- Article Stream (Classic List) -->
            <main class="lg:col-span-8 space-y-12">
                <div class="flex items-center justify-between mb-16 px-4">
                    <h2 class="text-4xl font-black text-slate-900 dark:text-white tracking-tight">Son Yayınlar</h2>
                    <div class="h-[1px] flex-1 bg-slate-200 dark:bg-white/10 mx-8"></div>
                </div>

                <div id="blog-posts-container" class="space-y-10">
                    @foreach (var post in posts)
                    {
                        <article class="frosted-glass rounded-[2.5rem] overflow-hidden corporate-card group" data-category="@post.Category" data-aos="fade-up">
                            <div class="flex flex-col md:flex-row p-4 md:p-6 gap-8">
                                <div class="w-full md:w-1/3 shrink-0 relative">
                                    <div class="aspect-[4/5] rounded-3xl overflow-hidden shadow-2xl relative">
                                        <img src="@post.ImageUrl" class="w-full h-full object-cover group-hover:scale-110 transition-transform duration-700" alt="@post.Title" />
                                        <div class="absolute inset-0 bg-gradient-to-t from-slate-900/80 via-transparent to-transparent opacity-60"></div>
                                        <div class="absolute top-4 left-4">
                                            <span class="px-4 py-2 rounded-xl bg-blue-600 text-white text-[10px] font-black uppercase tracking-widest backdrop-blur-md">@post.Category</span>
                                        </div>
                                    </div>
                                </div>
                                <div class="flex-1 py-4 flex flex-col justify-between">
                                    <div class="space-y-4">
                                        <div class="flex items-center gap-4 text-[10px] font-black text-slate-400 uppercase tracking-widest mb-4">
                                            <span class="flex items-center gap-1.5"><span class="material-symbols-outlined text-sm">calendar_today</span> @post.PublishDate.ToString("dd MMM yyyy")</span>
                                            <span class="w-1 h-1 rounded-full bg-slate-300"></span>
                                            <span class="flex items-center gap-1.5"><span class="material-symbols-outlined text-sm">schedule</span> 6 Dakika Okuma</span>
                                        </div>
                                        <h3 class="text-3xl font-black text-slate-900 dark:text-white leading-tight group-hover:text-blue-600 transition-colors">
                                            <a href="/blog-detay/@post.Slug">@post.Title</a>
                                        </h3>
                                        <p class="text-lg text-slate-500 dark:text-slate-400 font-light leading-relaxed line-clamp-2">@post.Summary</p>
                                    </div>
                                    <div class="mt-8 pt-6 border-t border-slate-100 dark:border-white/5 flex items-center justify-between">
                                        <a href="/blog-detay/@post.Slug" class="flex items-center gap-3 text-blue-600 dark:text-blue-400 font-black text-sm hover:translate-x-2 transition-transform uppercase">
                                            Makale Detayı
                                            <span class="material-symbols-outlined">arrow_right_alt</span>
                                        </a>
                                        <div class="flex -space-x-3 hover:space-x-1 transition-all">
                                            <div class="w-10 h-10 rounded-full border-2 border-white dark:border-slate-900 bg-slate-100 dark:bg-slate-800 flex items-center justify-center text-slate-400 hover:z-10 cursor-pointer">
                                                <span class="material-symbols-outlined text-sm">share</span>
                                            </div>
                                            <div class="w-10 h-10 rounded-full border-2 border-white dark:border-slate-900 bg-slate-100 dark:bg-slate-800 flex items-center justify-center text-slate-400 hover:z-10 cursor-pointer">
                                                <span class="material-symbols-outlined text-sm">bookmark</span>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </article>
                    }
                </div>
            </main>

            <!-- Sidebar (Restore) -->
            <aside class="lg:col-span-4 space-y-12">
                <div class="frosted-glass p-10 rounded-[3rem] corporate-card" data-aos="fade-left">
                    <div class="space-y-4">
                        <label class="text-[10px] font-black uppercase text-slate-400 tracking-[0.3em]">Hızlı Arama</label>
                        <div class="relative group">
                            <input class="w-full rounded-2xl border-2 border-transparent bg-slate-50 dark:bg-slate-800/80 text-slate-950 dark:text-white placeholder-slate-400 pl-14 pr-6 py-5 outline-none font-bold transition-all focus:bg-white dark:focus:bg-slate-900 focus:border-blue-500/30" 
                                   placeholder="Teknik araştırma..." type="text" onkeyup="searchBlog(this.value)"/>
                            <span class="material-symbols-outlined absolute left-5 top-1/2 -translate-y-1/2 text-slate-400 group-focus-within:text-blue-600 transition-colors">terminal</span>
                        </div>
                    </div>
                </div>

                <div class="frosted-glass p-10 rounded-[2.5rem] corporate-card" data-aos="fade-left" data-aos-delay="100">
                    <h4 class="text-xl font-black text-slate-900 dark:text-white mb-10">Kategoriler</h4>
                    <div class="space-y-3" id="category-list">
                        <button onclick="filterBlog('all')" class="category-card active w-full flex items-center justify-between p-5 rounded-2xl bg-slate-50 dark:bg-white/5 text-slate-600 dark:text-slate-300 font-bold hover:shadow-lg">
                            <div class="flex items-center gap-4">
                                <span class="material-symbols-outlined opacity-70">apps</span>
                                <span>Tüm Yazılar</span>
                            </div>
                            <span class="material-symbols-outlined text-sm opacity-50">chevron_right</span>
                        </button>
                        @foreach (var category in categories)
                        {
                            <button onclick="filterBlog('@category.Key')" class="category-card w-full flex items-center justify-between p-5 rounded-2xl bg-slate-50 dark:bg-white/5 text-slate-600 dark:text-slate-300 font-bold hover:shadow-lg">
                                <div class="flex items-center gap-4">
                                    <span class="material-symbols-outlined opacity-70 text-blue-600">@GetCategoryIcon(category.Key)</span>
                                    <span>@category.Key</span>
                                </div>
                                <span class="material-symbols-outlined text-sm opacity-50">chevron_right</span>
                            </button>
                        }
                    </div>
                </div>

                <!-- Featured Posts Module -->
                <div class="frosted-glass p-10 rounded-[2.5rem] corporate-card" data-aos="fade-left" data-aos-delay="200">
                    <h4 class="text-xl font-black text-slate-900 dark:text-white mb-10">Trend Başlıklar</h4>
                    <div class="space-y-8">
                        @foreach (var popPost in popularPosts)
                        {
                            <a href="/blog-detay/@popPost.Slug" class="group flex gap-4 items-center">
                                <div class="w-16 h-16 rounded-xl overflow-hidden shrink-0 shadow-lg">
                                    <img src="@popPost.ImageUrl" class="w-full h-full object-cover group-hover:scale-125 transition-transform duration-500" />
                                </div>
                                <div class="space-y-1">
                                    <p class="text-blue-600 text-[8px] font-black uppercase tracking-widest">@popPost.Category</p>
                                    <h5 class="font-black text-slate-800 dark:text-slate-100 group-hover:text-blue-600 transition-colors leading-tight text-sm line-clamp-2">@popPost.Title</h5>
                                </div>
                            </a>
                        }
                    </div>
                </div>

                <div class="p-10 rounded-[2.5rem] bg-gradient-to-br from-blue-600 to-indigo-800 text-white shadow-2xl relative overflow-hidden group corporate-card" data-aos="fade-up">
                    <div class="relative z-10 space-y-6">
                        <span class="material-symbols-outlined text-5xl">alternate_email</span>
                        <h4 class="text-3xl font-black">Visionary Updates</h4>
                        <p class="text-blue-100 font-light">Yeni nesil veri yaklaşımlarından haberdar olun.</p>
                        <button class="w-full py-5 px-8 rounded-2xl bg-white text-blue-600 font-black text-xs tracking-widest uppercase">ABONE OL</button>
                    </div>
                </div>
            </aside>
        </div>
    </div>
</div>

@section Scripts {
    <script src="https://cdn.jsdelivr.net/particles.js/2.0.0/particles.min.js"></script>
    <script>
        function initParticles() {
            if(window.particlesJS) {
                particlesJS('particles-js-blog', {
                    "particles": {
                        "number": { "value": 30, "density": { "enable": true, "value_area": 800 } },
                        "color": { "value": "#3b82f6" },
                        "shape": { "type": "circle" },
                        "opacity": { "value": 0.1, "random": true },
                        "size": { "value": 2, "random": true },
                        "line_linked": { "enable": false },
                        "move": { "enable": true, "speed": 0.5, "direction": "none", "random": true, "straight": false, "out_mode": "out", "bounce": false }
                    },
                    "retina_detect": true
                });
            }
        }
        initParticles();

        function filterBlog(category) {
            // Update sidebar buttons
            const buttons = document.querySelectorAll('.category-card');
            buttons.forEach(btn => {
                btn.classList.remove('active');
                if (btn.innerText.includes(category) || (category === 'all' && btn.innerText.includes('Tüm Yazılar'))) {
                    btn.classList.add('active');
                }
            });

            const articles = document.querySelectorAll('#blog-posts-container article');
            articles.forEach(article => {
                const articleCategory = article.getAttribute('data-category');
                if (category === 'all' || articleCategory === category) {
                    article.style.display = 'block';
                } else {
                    article.style.display = 'none';
                }
            });
        }
        
        function searchBlog(query) {
             const articles = document.querySelectorAll('#blog-posts-container article');
             const lowerQuery = query.toLowerCase();
             articles.forEach(article => {
                const title = article.querySelector('h3').textContent.toLowerCase();
                const summary = article.querySelector('p').textContent.toLowerCase();
                 if (title.includes(lowerQuery) || summary.includes(lowerQuery)) {
                    article.style.display = 'block';
                } else {
                    article.style.display = 'none';
                }
            });
        }
    </script>
}


