@page "/hakkimizda"
@{
    Layout = "_RevizeLayout";
    ViewData["Title"] = "Hakkımızda";
}

@* Hero Section - Full Width Matching Index.cshtml *@
<section class="relative w-full mb-16 lg:mb-24">
    <div class="hero-wrapper relative w-full h-[500px] lg:h-[600px] overflow-hidden border-b border-slate-200 dark:border-white/5 bg-slate-900">
         @* Particles Container *@
        <div id="particles-js-about" class="absolute inset-0 z-20 pointer-events-none mix-blend-screen"></div>
        
        <div class="hero-slide active h-full w-full absolute inset-0 flex items-center justify-center text-center px-4">
             <div class="hero-bg absolute inset-0 bg-cover bg-center z-0" style="background-image: linear-gradient(135deg, rgba(10,16,32,0.85), rgba(13,31,74,0.75)), url('https://lh3.googleusercontent.com/aida-public/AB6AXuB4BxSQIjGFh2RQEJtgyrsKNHds9bbNJLn7oMJPln7z95LvbphyoLjD0rOsZnlk4KqMucH3EzEqY3IH4Z1MFH8sm8W0GHOvR-vQ4uF6BWp7SiiY7yUJianh9SO-Yr-cK9Mwrx7OUIamCCWw5ci3QPVeJX2riQ22aCd5IVu0H6UsmQlJ4127Xb5ddpmWcAvnCtE97IOF-aa8VM2dxRKLXBUoi_EZB3pct-EHJj299-ozz_JIqxVQb8QpbqiIvNGMgAW04cUHj7WVmm_j');"></div>
             <div class="hero-content relative z-10 max-w-5xl mx-auto space-y-6 md:space-y-8">
                <span class="inline-block py-1.5 px-4 rounded-full bg-blue-500/20 text-blue-200 text-xs md:text-sm font-bold tracking-wider uppercase backdrop-blur-sm border border-blue-500/30">Hakkımızda</span>
                <h1 class="text-4xl sm:text-5xl md:text-8xl font-black text-white leading-[1] tracking-tighter">Veride Vizyon,<br/><span class="text-transparent bg-clip-text bg-gradient-to-r from-blue-400 via-indigo-400 to-purple-500 animate-text-shimmer">Gelecekte Liderlik</span></h1>
                <p class="text-slate-300 text-lg md:text-2xl font-light tracking-wide max-w-3xl mx-auto leading-relaxed">Karmaşık veri yığınlarını stratejik kararlara dönüştüren mühendislik gücüyüz.</p>
             </div>
        </div>
    </div>
</section>

@section Scripts {
    <script>
        // Init particles for this page if library is loaded (it is in Layout usually or Index)
        // We might need to ensure particles.js is loaded in Layout or here. 
        // Assuming it is available since it worked on Index.
        if(window.particlesJS) {
            particlesJS('particles-js-about', {
              "particles": {
                "number": { "value": 30, "density": { "enable": true, "value_area": 800 } },
                "color": { "value": "#ffffff" },
                "shape": { "type": "circle" },
                "opacity": { "value": 0.2, "random": false },
                "size": { "value": 2, "random": false },
                "line_linked": { "enable": true, "distance": 150, "color": "#ffffff", "opacity": 0.1, "width": 1 },
                "move": { "enable": true, "speed": 0.4, "direction": "right", "random": false, "straight": false, "out_mode": "out", "bounce": false }
              },
              "interactivity": {
                "detect_on": "canvas",
                "events": { "onhover": { "enable": false }, "onclick": { "enable": false }, "resize": true }
              },
              "retina_detect": true
            });
        }
    </script>
}

    <div class="mx-auto max-w-7xl px-4 flex flex-col gap-24 py-16 md:py-24">
        
        <!-- Values Section -->
        <section class="text-center space-y-16">
            <div class="max-w-4xl mx-auto space-y-6" data-aos="fade-up">
