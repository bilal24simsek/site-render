<style>
    :root {
        --p-blue: #2563eb;
        --p-indigo: #4f46e5;
        --p-purple: #7c3aed;
        --p-slate: #0f172a;
        --glass-bg: rgba(255, 255, 255, 0.7);
    }

    body {
        font-family: 'Outfit', sans-serif;
        overflow-x: hidden;
    }

    /* Scroll Progress Bar */
    #scrollProgress {
        position: fixed;
        top: 0;
        left: 0;
        width: 0%;
        height: 4px;
        background: linear-gradient(90deg, var(--p-blue), var(--p-purple));
        z-index: 9999;
        transition: width 0.1s ease;
    }

    /* Floating Abstract Shapes */
    .bg-shape {
        position: absolute;
        filter: blur(80px);
        opacity: 0.4;
        z-index: 0;
        pointer-events: none;
        border-radius: 50%;
    }

    /* 3D Perspective Tilt & Hover Effects */
    .wow-card {
        background: var(--glass-bg);
        backdrop-filter: blur(20px);
        border: 1px solid rgba(255, 255, 255, 0.8);
        box-shadow: 0 8px 32px 0 rgba(31, 38, 135, 0.05);
        transition: all 0.5s cubic-bezier(0.23, 1, 0.32, 1);
        transform-style: preserve-3d;
    }
    .wow-card:hover {
        transform: translateY(-15px) rotateX(5deg) rotateY(-5deg);
        box-shadow: 0 40px 80px -15px rgba(37, 99, 235, 0.15);
        border-color: var(--p-blue);
    }

    /* Parallax Text */
    .parallax-text {
        will-change: transform;
        transition: transform 0.1s ease-out;
    }

    /* Live Counter Styling */
    .counter-value {
        font-variant-numeric: tabular-nums;
    }

    /* Animated Gradients */
    .animate-gradient {
        background: linear-gradient(-45deg, #eff6ff, #f5f3ff, #fafaf9, #eef2ff);
        background-size: 400% 400%;
        animation: gradientBG 15s ease infinite;
    }
    @@keyframes gradientBG {
        0% { background-position: 0% 50%; }
        50% { background-position: 100% 50%; }
        100% { background-position: 0% 50%; }
    }

    /* Mouse Spotlight Enhancement */
    #spotlight {
        pointer-events: none;
        position: fixed;
        width: 1000px;
        height: 1000px;
        background: radial-gradient(circle at center, rgba(37,99,235,0.08) 0%, transparent 70%);
        transform: translate(-50%, -50%);
        z-index: 1;
        transition: opacity 0.5s ease;
    }

    /* Section Typography */
    .big-title {
        font-size: clamp(3rem, 10vw, 8rem);
        line-height: 0.9;
        font-weight: 900;
        letter-spacing: -0.05em;
    }
</style>

