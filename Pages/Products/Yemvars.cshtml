@page "/urunler/yemvars"
@{
    Layout = "_RevizeLayout";
    ViewData["Title"] = "YEMVARS - Enerji Yönetim Sistemi";
}

@* Hero Section *@
<section class="relative w-full overflow-hidden bg-slate-950 pt-20">
    <div class="absolute inset-0 z-0">
        <div class="absolute inset-0 bg-gradient-to-b from-blue-600/10 to-transparent"></div>
        <div id="particles-js-yemvars" class="absolute inset-0 opacity-30"></div>
    </div>
    
    <div class="max-w-7xl mx-auto px-4 relative z-10 py-24 lg:py-32">
        <div class="grid lg:grid-cols-2 gap-12 items-center">
            <div data-aos="fade-right">
                <span class="inline-block py-1 px-3 rounded-full bg-blue-500/10 border border-blue-500/20 text-blue-400 text-xs font-bold uppercase tracking-widest mb-6">Amiral Gemisi</span>
                <h1 class="text-5xl lg:text-7xl font-black text-white mb-6 leading-tight">YEMVARS</h1>
                <p class="text-xl text-slate-400 mb-8 max-w-xl leading-relaxed">
                    Yerli ve Milli Ar-Ge Projesi. Oracle ve MS-SQL bağımlılığını ortadan kaldırarak <strong>Milyonlarca Dolar</strong> lisans tasarrufu ve %30 performans artışı sağlıyoruz.
                </p>
                <div class="flex flex-wrap gap-4">
                    <a href="#ozellikler" class="px-8 py-4 bg-primary text-white font-bold rounded-2xl hover:shadow-lg hover:shadow-primary/30 transition-all">Özellikleri Keşfedin</a>
                    <button onclick="document.getElementById('demoLauncher').click()" class="px-8 py-4 bg-white/5 border border-white/10 text-white font-bold rounded-2xl hover:bg-white/10 transition-all">Demo Talep Et</button>
                </div>
            </div>
            <div class="relative" data-aos="zoom-in">
                <div class="absolute -inset-4 bg-blue-500/20 blur-3xl rounded-full opacity-50"></div>
                <div class="relative bg-slate-900/50 border border-white/10 p-4 rounded-3xl backdrop-blur-xl">
                    <div class="aspect-video bg-slate-800 rounded-2xl flex items-center justify-center overflow-hidden relative">
                        <!-- Premium Logo Animation -->
                        <div class="relative flex items-center justify-center">
                            <div class="absolute inset-0 w-32 h-32 bg-blue-500 rounded-full blur-[50px] opacity-20 animate-pulse"></div>
                            <div class="relative z-10 w-24 h-24 bg-slate-900 rounded-2xl border border-slate-700 flex items-center justify-center shadow-2xl group-hover:scale-110 transition-transform duration-500">
                                <span class="material-symbols-outlined text-5xl text-blue-500 animate-pulse">bolt</span>
                            </div>
                            <!-- Orbiting particles -->
                            <div class="absolute inset-0 animate-[spin_10s_linear_infinite]">
                                <div class="w-2 h-2 bg-blue-400 rounded-full absolute -top-8 left-1/2 -translate-x-1/2 shadow-[0_0_10px_#60a5fa]"></div>
                                <div class="w-1.5 h-1.5 bg-blue-600 rounded-full absolute -bottom-6 left-1/2 -translate-x-1/2 shadow-[0_0_10px_#2563eb]"></div>
                            </div>
                            <div class="absolute inset-0 animate-[spin_15s_linear_infinite_reverse] w-[180%] h-[180%] left-[-40%] top-[-40%] border border-dashed border-blue-500/20 rounded-full"></div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

@* Features *@
<section id="ozellikler" class="py-24 bg-slate-50 dark:bg-slate-900">
    <div class="max-w-7xl mx-auto px-4">
        <div class="text-center mb-16" data-aos="fade-up">
            <h2 class="text-3xl lg:text-5xl font-bold text-slate-900 dark:text-white mb-4">Neden YEMVARS?</h2>
            <p class="text-slate-500 max-w-2xl mx-auto">Enerji sektörünün karmaşık veri ihtiyaçları için özel olarak tasarlanmış uçtan uca çözüm.</p>
        </div>

        <div class="grid md:grid-cols-3 gap-8">
            <div class="bg-white dark:bg-slate-800 p-8 rounded-3xl border border-slate-200 dark:border-slate-700 shadow-sm hover:shadow-xl transition-all group" data-aos="fade-up" data-aos-delay="0">
                <div class="w-14 h-14 bg-blue-500/10 rounded-2xl flex items-center justify-center text-blue-500 mb-6 group-hover:scale-110 transition-transform">
                    <span class="material-symbols-outlined text-3xl">monitoring</span>
                </div>
                <h3 class="text-xl font-bold text-slate-900 dark:text-white mb-4">Gerçek Zamanlı İzleme</h3>
                <p class="text-slate-500 dark:text-slate-400 text-sm leading-relaxed">Saha verilerini milisaniyeler içinde merkeze aktarın ve anlık dashboardlar üzerinden takip edin.</p>
            </div>

            <div class="bg-white dark:bg-slate-800 p-8 rounded-3xl border border-slate-200 dark:border-slate-700 shadow-sm hover:shadow-xl transition-all group" data-aos="fade-up" data-aos-delay="100">
                <div class="w-14 h-14 bg-purple-500/10 rounded-2xl flex items-center justify-center text-purple-500 mb-6 group-hover:scale-110 transition-transform">
                    <span class="material-symbols-outlined text-3xl">analytics</span>
                </div>
                <h3 class="text-xl font-bold text-slate-900 dark:text-white mb-4">Gelişmiş Analitik</h3>
                <p class="text-slate-500 dark:text-slate-400 text-sm leading-relaxed">Yapay zeka destekli algoritmalarla üretim tahminleri yapın ve verimliliği optimize edin.</p>
            </div>

            <div class="bg-white dark:bg-slate-800 p-8 rounded-3xl border border-slate-200 dark:border-slate-700 shadow-sm hover:shadow-xl transition-all group" data-aos="fade-up" data-aos-delay="200">
                <div class="w-14 h-14 bg-green-500/10 rounded-2xl flex items-center justify-center text-green-500 mb-6 group-hover:scale-110 transition-transform">
                    <span class="material-symbols-outlined text-3xl">description</span>
                </div>
                <h3 class="text-xl font-bold text-slate-900 dark:text-white mb-4">Otomatik Raporlama</h3>
                <p class="text-slate-500 dark:text-slate-400 text-sm leading-relaxed">EPDK ve diğer kurumlar için gerekli resmi tabloları tek tuşla, sıfır hata ile oluşturun.</p>
            </div>
        </div>
    </div>
</section>
 
@* Value Proposition Section *@
<section class="py-24 bg-slate-950">
    <div class="max-w-7xl mx-auto px-4">
        <div class="text-center mb-16" data-aos="fade-up">
            <h2 class="text-3xl lg:text-5xl font-bold text-white mb-4">Lisans Maliyet Avantajı</h2>
            <p class="text-slate-400 max-w-2xl mx-auto">Oracle ve diğer yabancı menşeli veritabanı çözümlerinden kurtularak elde edilen devasa tasarruf potansiyeli.</p>
        </div>

        <div class="grid md:grid-cols-2 gap-12 items-center" data-aos="fade-up">
            <div class="space-y-6">
                <div class="p-6 bg-slate-900/50 rounded-2xl border border-slate-800">
                    <h4 class="text-blue-400 font-bold text-xl mb-2">Vendor Lock-in Sonlandırın</h4>
                    <p class="text-slate-400 text-sm">Yıllık artan lisans ve bakım maliyetlerinden kurtulun. YEMVARS ile veri altyapınızın kontrolü tamamen sizin elinizde.</p>
                </div>
                <div class="p-6 bg-slate-900/50 rounded-2xl border border-slate-800">
                    <h4 class="text-emerald-400 font-bold text-xl mb-2">%100 Yerli ve Özgür</h4>
                    <p class="text-slate-400 text-sm">Açık kaynak teknolojilerin gücünü kullanarak, global standartlarda ama yerli mühendislik ürünü bir çözümle yola devam edin.</p>
                </div>
            </div>
            <div class="bg-blue-600/10 p-12 rounded-[3rem] border border-blue-500/20 text-center">
                <div class="text-6xl font-black text-white mb-4">5 Yıl</div>
                <div class="text-slate-400 uppercase tracking-widest font-bold text-sm">Süreç Analizinde</div>
                <div class="text-4xl font-black text-blue-500 mt-4">%60-80</div>
                <div class="text-slate-400 text-xs">Maliyet Tasarrufu Potansiyeli</div>
            </div>
        </div>
        <p class="mt-12 text-xs text-slate-500 text-center italic">* Kurumsal veritabanı lisans ve bakım maliyetleri ortalamaları baz alınarak hesaplanmıştır.</p>
    </div>
</section>

@* Architecture Integration CTA *@
<section class="py-24 relative overflow-hidden">
    <div class="max-w-4xl mx-auto px-4 text-center">
        <div class="bg-primary/5 border border-primary/20 p-12 rounded-[40px] backdrop-blur-sm relative z-10" data-aos="zoom-in">
            <h2 class="text-3xl font-bold text-slate-900 dark:text-white mb-6">Mimarimizi İncelediniz mi?</h2>
            <p class="text-slate-500 dark:text-slate-400 mb-8 max-w-xl mx-auto">YEMVARS'ın arkasındaki yüksek teknolojili akış mimarisini ve devasa veri katmanlarını keşfedin.</p>
            <a href="/EnergySolutions" class="inline-flex items-center gap-2 px-8 py-4 bg-primary text-white font-bold rounded-2xl hover:scale-105 transition-all">
                Mimari Akışı Gör
                <span class="material-symbols-outlined">trending_flat</span>
            </a>
        </div>
    </div>
</section>

@section Scripts {
    <script src="https://cdn.jsdelivr.net/particles.js/2.0.0/particles.min.js"></script>
    <script>
        if(window.particlesJS) {
            particlesJS('particles-js-yemvars', {
                "particles": {
                    "number": { "value": 40, "density": { "enable": true, "value_area": 800 } },
                    "color": { "value": "#3b82f6" },
                    "shape": { "type": "circle" },
                    "opacity": { "value": 0.5, "random": true },
                    "size": { "value": 3, "random": true },
                    "line_linked": { "enable": true, "distance": 150, "color": "#3b82f6", "opacity": 0.2, "width": 1 },
                    "move": { "enable": true, "speed": 1, "direction": "none", "random": true, "straight": false, "out_mode": "out", "bounce": false }
                },
                "interactivity": { "detect_on": "canvas", "events": { "onhover": { "enable": true, "mode": "grab" }, "onclick": { "enable": false }, "resize": true } },
                "retina_detect": true
            });
        }
    </script>
}
