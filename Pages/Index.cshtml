@section Scripts {
    <script>
        (() => {
            const sliders = document.querySelectorAll('.hero-slider');
            if (!sliders.length) return;

            sliders.forEach((slider) => {
                const slides = slider.querySelectorAll('.hero-slide');
                const dots = slider.querySelector('.hero-dots');
                let index = 0;
                let timer;

                const setActive = (i) => {
                    slides.forEach((s, idx) => s.classList.toggle('active', idx === i));
                    if (dots) {
                         dots.querySelectorAll('button').forEach((d, idx) => d.classList.toggle('active', idx === i));
                    }
                    index = i;
                };

                const next = () => setActive((index + 1) % slides.length);
                const stop = () => { if (timer) clearInterval(timer); };
                const start = () => { stop(); timer = setInterval(next, 4000); };

                slides.forEach((_, idx) => {
                    if (dots) {
                        const dot = document.createElement('button');
                        dot.setAttribute('aria-label', `Slide ${idx + 1}`);
                        dot.addEventListener('click', () => { setActive(idx); start(); });
                        dots.appendChild(dot);
                    }
                });

                setActive(0);
                start();

                slider.addEventListener('mouseenter', stop);
                slider.addEventListener('mouseleave', start);
                slider.addEventListener('touchstart', stop, { passive: true });
                slider.addEventListener('touchend', start, { passive: true });
            });
        })();

        // Typewriter Effect
        const typeWriterText = ["Yerli ve Milli", "Gelecek Odaklı", "Yüksek Performanslı"];
        let typeInfo = { textIdx: 0, charIdx: 0, isDeleting: false };
        const typeTarget = document.getElementById('typewriter-text');
        
        function typeWriter() {
            if (!typeTarget) return;
            const currentText = typeWriterText[typeInfo.textIdx];
            
            if (typeInfo.isDeleting) {
                typeTarget.textContent = currentText.substring(0, typeInfo.charIdx - 1);
                typeInfo.charIdx--;
            } else {
                typeTarget.textContent = currentText.substring(0, typeInfo.charIdx + 1);
                typeInfo.charIdx++;
            }

            let typeSpeed = typeInfo.isDeleting ? 80 : 150;

            if (!typeInfo.isDeleting && typeInfo.charIdx === currentText.length) {
                typeSpeed = 2000; // Pause at end
                typeInfo.isDeleting = true;
            } else if (typeInfo.isDeleting && typeInfo.charIdx === 0) {
                typeInfo.isDeleting = false;
                typeInfo.textIdx = (typeInfo.textIdx + 1) % typeWriterText.length;
                typeSpeed = 500;
            }

            setTimeout(typeWriter, typeSpeed);
        }
        
        // Start after a slight delay to let initial animations play
        setTimeout(typeWriter, 1000);
        
        // Stats Counter
        const statsSection = document.getElementById('stats-section');
        const counters = document.querySelectorAll('.counter-value');
        let started = false;

        if(statsSection && counters.length > 0) {
             const observer = new IntersectionObserver((entries) => {
                if(entries[0].isIntersecting && !started) {
                    started = true;
                    counters.forEach(counter => {
                        const target = parseInt(counter.getAttribute('data-target'));
                        const suffix = counter.getAttribute('data-suffix') || '';
                        const duration = 2000;
                        const step = target / (duration / 16);
                        let current = 0;
                        
                        const updateCounter = () => {
                            current += step;
                            if(current < target) {
                                counter.textContent = Math.floor(current) + suffix;
                                requestAnimationFrame(updateCounter);
                            } else {
                                counter.textContent = target + suffix;
                            }
                        };
                        updateCounter();
                    });
                }
            }, { threshold: 0.5 });
            observer.observe(statsSection);
        }

        // Particles.js Init - Corporate & Professional Configuration
        if(window.particlesJS) {
            particlesJS('particles-js', {
              "particles": {
                "number": { "value": 25, "density": { "enable": true, "value_area": 800 } },
                "color": { "value": "#ffffff" },
                "shape": { "type": "circle" },
                "opacity": { "value": 0.15, "random": false },
                "size": { "value": 2, "random": false },
                "line_linked": { "enable": true, "distance": 150, "color": "#ffffff", "opacity": 0.08, "width": 1 },
                "move": { "enable": true, "speed": 0.4, "direction": "right", "random": false, "straight": false, "out_mode": "out", "bounce": false }
              },
              "interactivity": {
                "detect_on": "canvas",
                "events": { "onhover": { "enable": false }, "onclick": { "enable": false }, "resize": true }
              },
              "retina_detect": true
            });
        }
    </script>
}

