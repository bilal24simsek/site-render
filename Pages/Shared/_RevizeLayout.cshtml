@{
    Layout = null;
}
<!DOCTYPE html>
<html class="light" lang="tr">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    @{
        var pageTitle = ViewData["Title"] as string;
        var fullTitle = string.IsNullOrWhiteSpace(pageTitle) ? "Bianalytics" : $"{pageTitle} | Bianalytics";
    }
    <title>@fullTitle</title>
    <link rel="icon" type="image/png" href="/logo/sitelogo.png" />
    <script src="https://cdn.tailwindcss.com?plugins=forms,container-queries"></script>
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link rel="stylesheet" href="https://fonts.googleapis.com/css2?family=Outfit:wght@100..900&family=Public+Sans:ital,wght@0,100..900;1,100..900&display=swap" />
    <link rel="stylesheet" href="https://fonts.googleapis.com/css2?family=Material+Symbols+Outlined:wght,FILL@100..700,0..1&display=swap" />
    <link href="https://unpkg.com/aos@2.3.1/dist/aos.css" rel="stylesheet">
    <style>
        .material-symbols-outlined {
            font-variation-settings: 'FILL' 0, 'wght' 400, 'GRAD' 0, 'opsz' 24;
        }
        /* Sürekli kayan logo bandı */
        .animate-infinite-scroll {
            display: inline-flex;
            animation: scroll-horizontal 30s linear infinite;
        }
        @@keyframes scroll-horizontal {
            from { transform: translateX(0); }
            to { transform: translateX(-100%); }
        }
        /* Custom Scrollbar */
        ::-webkit-scrollbar { width: 10px; }
        ::-webkit-scrollbar-track { background: transparent; }
        ::-webkit-scrollbar-thumb { background: rgba(148, 163, 184, 0.5); border-radius: 5px; border: 2px solid transparent; background-clip: content-box; }
        ::-webkit-scrollbar-thumb:hover { background: rgba(148, 163, 184, 0.8); border: 2px solid transparent; background-clip: content-box; }
        .dark ::-webkit-scrollbar-thumb { background: rgba(71, 85, 105, 0.5); }
        .dark ::-webkit-scrollbar-thumb:hover { background: rgba(71, 85, 105, 0.8); }

        /* Scroll Progress Button */
        .progress-wrap {
            position: fixed;
            left: 30px;
            bottom: 30px;
            height: 46px;
            width: 46px;
            cursor: pointer;
            display: block;
            border-radius: 50px;
            box-shadow: inset 0 0 0 2px rgba(11, 94, 218, 0.1);
            z-index: 45;
            opacity: 0;
            visibility: hidden;
            transform: translateY(15px);
            transition: all 200ms linear;
            background: rgba(255, 255, 255, 0.8);
            backdrop-filter: blur(4px);
        }
        .dark .progress-wrap {
            box-shadow: inset 0 0 0 2px rgba(255, 255, 255, 0.1);
            background: rgba(15, 23, 42, 0.8);
        }
        .progress-wrap.active-progress {
            opacity: 1;
            visibility: visible;
            transform: translateY(0);
        }
        .progress-wrap::after {
            position: absolute;
            font-family: 'Material Symbols Outlined';
            content: 'arrow_upward';
            text-align: center;
            line-height: 46px;
            font-size: 24px;
            color: #0b5eda;
            left: 0;
            top: 0;
            height: 46px;
            width: 46px;
            cursor: pointer;
            display: block;
            z-index: 1;
            transition: all 200ms linear;
        }
        .dark .progress-wrap::after { color: white; }
        .progress-wrap:hover::after { opacity: 0; }
        .progress-wrap::before {
            position: absolute;
            font-family: 'Material Symbols Outlined';
            content: 'arrow_upward';
            text-align: center;
            line-height: 46px;
            font-size: 24px;
            opacity: 0;
            background: #0b5eda;
            -webkit-background-clip: text;
            -webkit-text-fill-color: transparent;
            left: 0;
            top: 0;
            height: 46px;
            width: 46px;
            cursor: pointer;
            display: block;
            z-index: 2;
            transition: all 200ms linear;
        }
        .progress-wrap:hover::before { opacity: 1; }
        .progress-wrap svg path { 
            fill: none; 
        }
        .progress-wrap svg.progress-circle path {
            stroke: #0b5eda;
            stroke-width: 4;
            box-sizing: border-box;
            transition: all 200ms linear;
        }
        .dark .progress-wrap svg.progress-circle path { stroke: white; }

        /* Kart hover parlaması - Premium Version */
        .card-glow {
            position: relative;
            overflow: hidden;
            background: rgba(255, 255, 255, 0.01);
            backdrop-filter: blur(10px);
            border: 1px solid rgba(255, 255, 255, 0.05);
        }
        .card-glow:not(.tilt-card) {
            transition: transform 0.4s cubic-bezier(0.175, 0.885, 0.32, 1.275), box-shadow 0.4s ease, border-color 0.4s ease;
        }
        .card-glow.tilt-card {
            transition: box-shadow 0.4s ease, border-color 0.4s ease;
        }

        .card-glow::after {
            content: "";
            position: absolute;
            inset: 0;
            /* Brighter and larger shine like 1.0.2 */
            background: radial-gradient(circle at var(--mouse-x, 50%) var(--mouse-y, 50%), rgba(11, 94, 218, 0.4), transparent 80%);
            opacity: 0;
            transition: opacity 0.5s ease;
            pointer-events: none;
            z-index: 2;
            mix-blend-mode: screen;
        }
        /* Keeping the border glow from 1.0.3 as an extra premium touch, but making sure it doesn't interfere */
        .card-glow::before {
            content: "";
            position: absolute;
            inset: 0;
            background: radial-gradient(400px circle at var(--mouse-x) var(--mouse-y), rgba(11, 94, 218, 0.4), transparent 40%);
            opacity: 0;
            z-index: 1;
            transition: opacity 0.5s ease;
            mask-image: linear-gradient(black, black), linear-gradient(black, black);
            mask-clip: content-box, border-box;
            -webkit-mask-composite: xor;
            mask-composite: exclude;
            padding: 1px; /* border width */
            border-radius: inherit;
            pointer-events: none;
        }

        .card-glow:hover {
            transform: translateY(-8px) scale(1.02); /* This applies to non-tilt cards mostly, strictly tilt cards are handled by JS */
            box-shadow: 0 20px 40px -15px rgba(11, 94, 218, 0.2);
            border-color: rgba(11, 94, 218, 0.2);
        }
        /* Override transform for tilt cards on hover to let JS handle it */
        .card-glow.tilt-card:hover {
            transform: none; 
        }

        .card-glow:hover::after, .card-glow:hover::before {
            opacity: 1;
        }

        /* Animated Text Gradient - Premium Flow */
        .animate-text-flow {
            background: linear-gradient(to right, #0b5eda, #7c3aed, #2563eb, #0b5eda);
            -webkit-background-clip: text;
            background-clip: text;
            color: transparent;
            background-size: 300% auto;
            animation: textFlow 6s linear infinite;
        }
        @@keyframes textFlow {
            to { background-position: 200% center; }
        }

        /* Modern Glassmorphism Helper */
        .dark .glass-premium {
            background: rgba(15, 23, 42, 0.6);
            border-color: rgba(255, 255, 255, 0.08);
            box-shadow: 0 4px 30px rgba(0, 0, 0, 0.3);
        }

        /* Premium Dropdown Menu */
        .dropdown {
            position: relative;
            display: inline-block;
        }
        .dropdown-content {
            position: absolute;
            top: 100%;
            left: 50%;
            transform: translateX(-50%) translateY(10px) scale(0.95);
            min-width: 240px;
            background: rgba(255, 255, 255, 0.95);
            backdrop-filter: blur(20px);
            border: 1px solid rgba(255, 255, 255, 0.2);
            border-radius: 1.25rem;
            box-shadow: 0 20px 40px -10px rgba(0,0,0,0.15);
            opacity: 0;
            visibility: hidden;
            transition: all 0.3s cubic-bezier(0.16, 1, 0.3, 1);
            z-index: 100;
            padding: 0.75rem;
            margin-top: 0.5rem;
        }
        .dark .dropdown-content {
            background: rgba(15, 23, 42, 0.95);
            border-color: rgba(255, 255, 255, 0.05);
            box-shadow: 0 20px 40px -10px rgba(0,0,0,0.4);
        }
        .dropdown:hover .dropdown-content {
            opacity: 1;
            visibility: visible;
            transform: translateX(-50%) translateY(0) scale(1);
        }
        .dropdown-item {
            display: flex;
            align-items: center;
            gap: 12px;
            padding: 10px 16px;
            border-radius: 0.75rem;
            color: inherit;
            text-decoration: none;
            transition: all 0.2s ease;
            font-weight: 600;
        }
        .dropdown-item:hover {
            background: rgba(11, 94, 218, 0.08);
            color: #0b5eda;
            transform: translateX(4px);
        }
        .dark .dropdown-item:hover {
            background: rgba(255, 255, 255, 0.05);
            color: white;
        }
        .dropdown-icon {
            width: 36px;
            height: 36px;
            display: flex;
            align-items: center;
            justify-content: center;
            background: rgba(11, 94, 218, 0.1);
            border-radius: 10px;
            color: #0b5eda;
            transition: all 0.3s ease;
        }
        .dropdown-item:hover .dropdown-icon {
            background: #0b5eda;
            color: white;
            transform: rotate(10deg);
        }
        /* Global overflow / image scaling */
        html { scroll-behavior: smooth; }
        html, body { overflow-x: hidden; }
        img { max-width: 100%; height: auto; display: block; }
        /* Main nav mobile scroll */
        .main-nav { overflow: visible; scrollbar-width: none; }
        .main-nav::-webkit-scrollbar { display: none; }
        /* Header layout helpers */
        .nav-wrapper {
            display: flex;
            flex: 1;
            align-items: center;
            justify-content: flex-end;
            gap: 2.5rem;
            min-width: 0;
        }
        /* Hero slider */
        .hero-slider {
            min-height: 460px;
            width: 100%;
            border-radius: 28px;
            position: relative;
            overflow: hidden;
            background: linear-gradient(135deg, #0a1224, #0f233f);
            box-shadow: 0 30px 80px -40px rgba(15,36,78,0.6);
            /* Fix for border-radius clipping during transform animations */
            transform: translateZ(0);
            -webkit-mask-image: -webkit-radial-gradient(white, black);
        }
        .hero-slides { position: relative; width: 100%; height: 100%; min-height: 460px; }
        .hero-slide {
            position: absolute;
            inset: 0;
            opacity: 0;
            transition: opacity 1.2s cubic-bezier(0.4, 0, 0.2, 1);
            display: flex;
            align-items: center;
            justify-content: center;
            pointer-events: none;
            z-index: 1;
        }
        .hero-slide.active {
            opacity: 1;
            pointer-events: auto;
            z-index: 10;
        }
        .hero-slide .hero-bg {
            position: absolute;
            inset: 0;
            background-size: cover;
            background-position: center;
            transform: scale(1);
            transition: transform 10s ease-out;
        }
        .hero-slide.active .hero-bg {
             transform: scale(1.15);
        }
        .hero-slide .hero-content {
            position: relative;
            z-index: 10;
            text-align: center;
            color: white;
            padding: 3.5rem 1.5rem;
            max-width: 1100px;
            text-shadow: 0 10px 30px rgba(0,0,0,0.45);
        }
        .hero-slide .hero-content h1 {
            font-size: clamp(2.4rem, 4vw + 1.2rem, 4.5rem);
            font-weight: 900;
            line-height: 1.1;
            margin-bottom: 1.5rem;
            opacity: 0;
            transform: translateY(30px);
            transition: opacity 0.8s ease, transform 0.8s ease;
            transition-delay: 0.3s;
        }
         .hero-slide .hero-content p {
            margin-top: 0;
            font-size: clamp(1.1rem, 1vw + 0.5rem, 1.4rem);
            color: rgba(255,255,255,0.95);
            max-width: 800px;
            margin-inline: auto;
            opacity: 0;
            transform: translateY(20px);
            transition: opacity 0.8s ease, transform 0.8s ease;
            transition-delay: 0.5s;
        }
        .hero-slide .hero-content .cta-wrapper {
             opacity: 0;
            transform: translateY(20px);
            transition: opacity 0.8s ease, transform 0.8s ease;
            transition-delay: 0.7s;
        }
        .hero-slide.active .hero-content h1,
        .hero-slide.active .hero-content p,
        .hero-slide.active .hero-content .cta-wrapper {
            opacity: 1;
            transform: translateY(0);
        }

        .hero-btn {
            display: inline-flex;
            margin-top: 1.8rem;
            padding: 1rem 2rem;
            border-radius: 1rem;
            background: rgba(255, 255, 255, 0.1);
            color: #fff;
            font-weight: 700;
            text-decoration: none;
            letter-spacing: 0.02em;
            transition: all 0.4s cubic-bezier(0.2, 0.8, 0.2, 1);
            border: 1px solid rgba(255,255,255,0.15);
            backdrop-filter: blur(12px);
            position: relative;
            overflow: hidden;
        }
        .hero-btn::before {
            content: '';
            position: absolute;
            inset: 0;
            background: linear-gradient(135deg, rgba(255,255,255,0.1), transparent);
            opacity: 0;
            transition: opacity 0.4s ease;
        }
        .hero-btn:hover {
            transform: translateY(-4px);
            box-shadow: 0 20px 40px -15px rgba(0,0,0,0.3);
            border-color: rgba(255,255,255,0.4);
            background: rgba(255, 255, 255, 0.2);
        }
        .hero-btn:hover::before { opacity: 1; }
        
        .hero-btn.primary {
             background: linear-gradient(135deg, #3b82f6, #2563eb);
             border-color: transparent;
        }
        .hero-btn.primary:hover {
             background: linear-gradient(135deg, #2563eb, #1d4ed8);
             box-shadow: 0 20px 40px -10px rgba(37, 99, 235, 0.5);
        }
        .hero-nav {
            position: absolute;
            top: 50%;
            transform: translateY(-50%);
            width: 50px;
            height: 50px;
            border-radius: 50%;
            border: 1px solid rgba(255,255,255,0.2);
            background: rgba(255,255,255,0.1);
            backdrop-filter: blur(8px);
            color: #fff;
            font-size: 24px;
            display: flex;
            align-items: center;
            justify-content: center;
            cursor: pointer;
            transition: all 0.3s ease;
            z-index: 20;
        }
        .hero-nav:hover { background: rgba(255,255,255,0.25); transform: translateY(-50%) scale(1.15); border-color: white; }
        .hero-nav.prev { left: 24px; }
        .hero-nav.next { right: 24px; }
        
        .hero-dots {
            position: absolute;
            bottom: 24px;
            left: 50%;
            transform: translateX(-50%);
            display: flex;
            gap: 12px;
            z-index: 20;
            padding: 8px 16px;
            background: rgba(0,0,0,0.2);
            backdrop-filter: blur(4px);
            border-radius: 99px;
            border: 1px solid rgba(255,255,255,0.1);
        }
        .hero-dots button {
            width: 10px;
            height: 10px;
            border-radius: 50%;
            border: 0;
            background: rgba(255,255,255,0.4);
            cursor: pointer;
            transition: all 0.3s ease;
        }
        .hero-dots button.active {
            width: 30px;
            border-radius: 99px;
            background: #fff;
            box-shadow: 0 0 15px rgba(255,255,255,0.5);
        }

        @@media (max-width: 1024px) {
            .hero-slider, .hero-slides { min-height: 480px; }
            .hero-slide .hero-content { padding: 2.8rem 1.25rem; }
            .nav-wrapper { gap: 1.5rem; }
        }
        @@media (max-width: 768px) {
            .hero-wrapper { width: 100% !important; left: 0 !important; transform: none !important; max-width: none !important; }
            .hero-slider, .hero-slides { min-height: 420px; border-radius: 18px; }
            .hero-slide .hero-content h1 { font-size: clamp(2rem, 5vw + 1rem, 2.8rem); margin-bottom: 1rem; }
            .hero-slide .hero-content p { font-size: 1rem; }
            .hero-content { padding: 1.4rem 1rem; }
            .hero-btn { margin-top: 0.9rem; padding: 0.8rem 1.5rem; font-size: 0.95rem; }
            .hero-nav { width: 36px; height: 36px; font-size: 18px; }
            .nav-wrapper { flex-direction: column; align-items: flex-start; gap: 0.9rem; }
            .main-nav { width: 100%; gap: 0.4rem 0.75rem; font-size: 0.95rem; padding-bottom: 0.2rem; overflow-x: hidden; flex-wrap: wrap; justify-content: flex-start; }
            .brand-logo { height: 36px; width: 36px; }
            .brand-text { font-size: 1.1rem; }
            header.sticky { padding-top: 0.1rem; padding-bottom: 0.1rem; }
            .contact-btn { min-width: 100%; height: 42px; padding-inline: 0.7rem; font-size: 0.95rem; justify-content: center; }
        }
        /* Mobile menu panel */
        .mobile-menu {
            position: absolute;
            inset-inline: 1rem;
            top: calc(100% + 0.5rem);
            border-radius: 1.5rem;
            border: 1px solid rgba(255,255,255,0.2);
            background: rgba(255,255,255,0.9);
            backdrop-filter: blur(20px);
            box-shadow: 0 25px 60px -15px rgba(0,0,0,0.2);
            overflow-y: auto;
            max-height: 80vh;
            z-index: 40;
            transform-origin: top;
            animation: mobileMenuEnter 0.3s cubic-bezier(0.16, 1, 0.3, 1);
        }
        @@keyframes mobileMenuEnter {
            from { opacity: 0; transform: scaleY(0.9) translateY(-10px); }
            to { opacity: 1; transform: scaleY(1) translateY(0); }
        }
        .dark .mobile-menu {
            background: rgba(15,23,42,0.95);
            border-color: rgba(255,255,255,0.1);
        }
        .mobile-menu a {
            display: flex;
            align-items: center;
            padding: 1rem 1.25rem;
            font-weight: 600;
            color: inherit;
            text-decoration: none;
            border-bottom: 1px solid rgba(0,0,0,0.05);
        }
        .dark .mobile-menu a { border-color: rgba(255,255,255,0.05); }
        .mobile-menu a:last-child { border-bottom: none; }
        
        .mobile-menu a:hover { background: rgba(11,94,218,0.1); color: #0b5eda; }
        .dark .mobile-menu a:hover { background: rgba(255,255,255,0.1); color: white; }
        
        .mobile-menu .contact-btn {
            width: calc(100% - 1.5rem);
            margin: 0.75rem;
        }
        /* Demo Widget */
        .demo-launcher {
            position: fixed;
            right: 24px;
            bottom: 30px;
            z-index: 50;
            display: flex;
            align-items: center;
            gap: 10px;
            padding: 12px 24px;
            background: linear-gradient(135deg, #0b5eda, #2563eb);
            color: white;
            border-radius: 99px;
            font-weight: 700;
            font-size: 1rem;
            box-shadow: 0 10px 30px -5px rgba(11, 94, 218, 0.5);
            cursor: pointer;
            transition: all 0.4s cubic-bezier(0.34, 1.56, 0.64, 1);
            border: 1px solid rgba(255,255,255,0.2);
            backdrop-filter: blur(4px);
        }
        .demo-launcher:hover {
            transform: translateY(-5px) scale(1.05);
            box-shadow: 0 20px 40px -8px rgba(11, 94, 218, 0.7);
            padding-right: 28px;
        }
        .demo-panel {
            position: fixed;
            right: 24px;
            bottom: 100px;
            width: 380px;
            max-width: calc(100vw - 48px);
            background: rgba(255, 255, 255, 0.8);
            backdrop-filter: blur(24px);
            -webkit-backdrop-filter: blur(24px);
            border-radius: 32px;
            box-shadow: 0 40px 80px -20px rgba(0, 0, 0, 0.3), 0 0 0 1px rgba(255,255,255,0.5);
            opacity: 0;
            visibility: hidden;
            transform: translateY(40px) scale(0.9);
            transition: all 0.5s cubic-bezier(0.19, 1, 0.22, 1);
            z-index: 49;
            overflow: hidden;
        }
        .dark .demo-panel {
            background: rgba(15, 23, 42, 0.8);
            box-shadow: 0 40px 80px -20px rgba(0, 0, 0, 0.6), 0 0 0 1px rgba(255,255,255,0.1);
        }
        .demo-panel.open {
            opacity: 1;
            visibility: visible;
            transform: translateY(0) scale(1);
        }
        

        
        /* Text Shimmer */
        @@keyframes text-shimmer { 0% { background-position: 0% 50%; } 100% { background-position: 200% 50%; } }
        .animate-text-shimmer { background-size: 200% auto; animation: text-shimmer 3s linear infinite; }
        /* Spotlight Effect on Body */
        body::before {
            content: "";
            position: fixed;
            top: 0; left: 0; width: 100%; height: 100%;
            background: radial-gradient(600px circle at var(--mouse-x, 50%) var(--mouse-y, 50%), rgba(29, 78, 216, 0.05), transparent 40%);
            pointer-events: none;
            z-index: 0; /* Behind content */
        }
        .dark body::before {
            background: radial-gradient(600px circle at var(--mouse-x, 50%) var(--mouse-y, 50%), rgba(56, 189, 248, 0.03), transparent 40%);
        }
    </style>
    <script>
        // Throttled mouse movement for performance
        let mouseTicking = false;
        document.addEventListener('mousemove', e => {
            if (!mouseTicking) {
                window.requestAnimationFrame(() => {
                    document.documentElement.style.setProperty('--mouse-x', e.clientX + 'px');
                    document.documentElement.style.setProperty('--mouse-y', e.clientY + 'px');
                    mouseTicking = false;
                });
                mouseTicking = true;
            }
        });
    </script>
    <script id="tailwind-config">
        tailwind.config = {
            darkMode: "class",
            theme: {
                extend: {
                    colors: {
                        "primary": "#0b5eda",
                        "logo-dark": "#1f8bff",
                        "logo-light": "#46b6ff",
                        "background-light": "#f8fafc",
                        "background-dark": "#0f172a",
                    },
                    fontFamily: {
                        "display": ["Outfit", "Public Sans", "sans-serif"],
                        "sans": ["Outfit", "Public Sans", "sans-serif"]
                    },
                    borderRadius: { "DEFAULT": "0.5rem", "lg": "1rem", "xl": "1.5rem", "2xl": "2rem", "full": "9999px" },
                },
            },
        }
    </script>
