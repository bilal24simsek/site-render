<script>
(() => {
    const launcher = document.getElementById('demoLauncher');
    const panel = document.getElementById('demoPanel');
    const closeBtn = document.getElementById('demoClose');
    const form = document.getElementById('demoForm');
    const success = document.getElementById('demoSuccess');

    if (!launcher || !panel) return;

    // Auto-select product based on URL
    try {
        const currentPath = window.location.pathname.toLowerCase();
        let targetProduct = null;
        
        if (currentPath.includes('hawketl')) targetProduct = "HawkETL";
        else if (currentPath.includes('bianalytics')) targetProduct = "BIAnalytics"; // Matches both product and potential main paths
        else if (currentPath.includes('yemvars')) targetProduct = "YEMVARS";
        else if (currentPath.includes('edvars')) targetProduct = "EDVARS";

        if (targetProduct) {
            const productRadio = form.querySelector(`input[name="product"][value="${targetProduct}"]`);
            if (productRadio) productRadio.checked = true;
        }
    } catch (e) { console.error('Auto-select error:', e); }

    // Toggle Panel
    const togglePanel = () => panel.classList.toggle('open');
    launcher.addEventListener('click', togglePanel);
    closeBtn.addEventListener('click', () => panel.classList.remove('open'));

    // Handle Form
    if (form && success) {
        form.addEventListener('submit', async (e) => {
            e.preventDefault();
            const btn = document.getElementById('demoSubmit');
            const originalContent = btn.innerHTML;
            
            // Collect data
            const formData = {
                adSoyad: document.getElementById('demoName').value,
                eposta: document.getElementById('demoEmail').value,
                telefon: document.getElementById('demoPhone').value,
                tip: "Demo Talebi",
                konuAciklamasi: `Seçilen Ürün: ${form.querySelector('input[name="product"]:checked').value}`
            };

            // Loading state
            btn.disabled = true;
            btn.innerHTML = '<span class="material-symbols-outlined animate-spin text-xl">progress_activity</span> Gönderiliyor...';
            btn.classList.add('opacity-75', 'cursor-not-allowed');

            try {
                const response = await fetch('/contactbot/submit', {
                    method: 'POST',
                    headers: { 'Content-Type': 'application/json' },
                    body: JSON.stringify(formData)
                });

                if (response.ok) {
                    form.classList.add('hidden');
                    success.classList.remove('hidden');
                    
                    // Reset form after 5 seconds or close
                    setTimeout(() => {
                        panel.classList.remove('open');
                        setTimeout(() => {
                            form.reset();
                            form.classList.remove('hidden');
                            success.classList.add('hidden');
                            btn.disabled = false;
                            btn.innerHTML = originalContent;
                            btn.classList.remove('opacity-75', 'cursor-not-allowed');
                        }, 500);
                    }, 5000);
                } else {
                    const error = await response.json();
                    alert("Bir hata oluştu: " + (error.message || "Lütfen daha sonra tekrar deneyin."));
                    btn.disabled = false;
                    btn.innerHTML = originalContent;
                    btn.classList.remove('opacity-75', 'cursor-not-allowed');
                }
            } catch (err) {
                console.error(err);
                alert("Bağlantı hatası oluştu. Lütfen internetinizi kontrol edin.");
                btn.disabled = false;
                btn.innerHTML = originalContent;
                btn.classList.remove('opacity-75', 'cursor-not-allowed');
            }
        });
    }

    // Close on outside click is tricky with floating elements, but optional.
})();
</script>
