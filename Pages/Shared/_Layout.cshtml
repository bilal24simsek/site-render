<!DOCTYPE html>
<html lang="tr">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Bianalytics</title>
    <link rel="icon" type="image/png" href="/sitelogo.png">
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Space+Grotesk:wght@400;500;600;700&family=General+Sans:wght@400;500;600;700&display=swap" rel="stylesheet">
    <style>
        :root {
            --bg: #050714;
            --bg-2: #0a1024;
            --panel: #0f182d;
            --panel-2: #0d1b33;
            --text: #e9f2ff;
            --muted: #9dabcb;
            --accent: #5aa7ff;
            --accent-2: #16c2f6;
            --accent-3: #7c3aed;
            --border: rgba(255,255,255,0.08);
            --glow: 0 24px 90px rgba(22,194,246,0.18);
        }
        :root[data-theme="light"] {
            --bg: #f8fbff;
            --bg-2: #e6f1ff;
            --panel: #ffffff;
            --panel-2: #f5f8ff;
            --text: #0b152b;
            --muted: #4b5565;
            --accent: #2563eb;
            --accent-2: #38bdf8;
            --accent-3: #1d4ed8;
            --border: rgba(11,21,43,0.08);
            --glow: 0 20px 60px rgba(37,99,235,0.18);
        }
        * { box-sizing: border-box; }
        body {
            margin: 0;
            font-family: "General Sans", "Space Grotesk", "Segoe UI", Arial, sans-serif;
            background: linear-gradient(180deg, #050912 0%, #0a0f1f 55%, #050912 100%);
            color: var(--text);
            min-height: 100vh;
        }
        [data-theme="light"] body {
            background: linear-gradient(180deg, #f8fbff 0%, #e6f1ff 100%);
        }
        header {
            padding: 18px 24px;
            display: flex;
            justify-content: space-between;
            align-items: center;
            background: rgba(7,12,28,0.9);
            backdrop-filter: blur(12px);
            border-bottom: 1px solid var(--border);
            box-shadow: 0 14px 60px rgba(0,0,0,0.45);
            position: sticky;
            top: 0;
            z-index: 10;
            overflow: hidden;
        }
        .brand {
            font-weight: 800;
            letter-spacing: 0.8px;
            color: var(--text);
            text-decoration: none;
            font-size: 1.08rem;
            display: inline-flex;
            align-items: center;
            gap: 10px;
        }
        .brand:before {
            content: "";
            width: 12px; height: 12px;
            border-radius: 4px;
            background: linear-gradient(135deg, var(--accent), var(--accent-2));
            box-shadow: 0 0 12px rgba(90,167,255,0.85);
        }
        .nav { display: flex; gap: 10px; align-items: center; }
        .nav-link {
            color: var(--muted);
            text-decoration: none;
            padding: 10px 12px;
            border-radius: 10px;
            transition: color 120ms ease, background 120ms ease, transform 120ms ease;
        }
        .nav-link:hover {
            color: var(--text);
            background: rgba(255,255,255,0.07);
            transform: translateY(-1px);
        }
        [data-theme="light"] header {
            background: rgba(255,255,255,0.96);
            border-bottom: 1px solid rgba(11,21,43,0.08);
            box-shadow: 0 12px 40px rgba(11,21,43,0.1);
        }
        [data-theme="light"] .nav-link:hover {
            background: rgba(37,99,235,0.12);
        }
        .right-actions { display: flex; align-items: center; gap: 10px; }
        .theme-toggle {
            border: 1px solid var(--border);
            background: rgba(255,255,255,0.08);
            color: var(--text);
            border-radius: 10px;
            padding: 8px 12px;
            cursor: pointer;
            transition: transform 120ms ease, border 120ms ease, background 120ms ease;
        }
        .theme-toggle:hover { transform: translateY(-1px); border-color: rgba(90,167,255,0.6); }
        main {
            max-width: none;
            width: 100%;
            margin: 24px auto 0;
            padding: 0 12px 40px;
        }
        .panel {
            background: linear-gradient(160deg, rgba(15,24,45,0.96), rgba(13,27,51,0.92));
            border: 1px solid var(--border);
            border-radius: 18px;
            padding: 30px;
            box-shadow: 0 22px 70px rgba(0,0,0,0.55);
        }
        [data-theme="light"] .panel {
            background: linear-gradient(160deg, #ffffff, #f7f9fd);
            border: 1px solid rgba(15,23,42,0.08);
            box-shadow: 0 16px 50px rgba(15,23,42,0.1);
        }
        h1 {
            margin: 0 0 12px;
            font-size: 1.9rem;
            line-height: 1.2;
        }
        p {
            margin: 0 0 18px;
            color: var(--muted);
            line-height: 1.6;
        }
        .grid {
            display: grid;
            gap: 14px;
            margin-top: 18px;
        }
        .card {
            padding: 16px 18px;
            border-radius: 12px;
            border: 1px solid rgba(255,255,255,0.05);
            background: rgba(255,255,255,0.02);
        }
        [data-theme="light"] .card {
            border: 1px solid rgba(15,23,42,0.08);
            background: #ffffff;
            box-shadow: 0 12px 40px rgba(15,23,42,0.08);
        }
        .card strong { color: var(--text); display: block; margin-bottom: 6px; }
        .card span { color: var(--muted); font-size: 0.95rem; line-height: 1.5; }
        footer {
            text-align: center;
            color: var(--muted);
            font-size: 0.9rem;
            padding: 24px 12px 32px;
        }
        .btn {
            display: inline-flex;
            align-items: center;
            gap: 8px;
            padding: 12px 16px;
            border-radius: 12px;
            border: 1px solid rgba(90,167,255,0.35);
            background: linear-gradient(135deg, rgba(90,167,255,0.2), rgba(22,194,246,0.2));
            color: var(--text);
            text-decoration: none;
            font-weight: 700;
            letter-spacing: 0.1px;
            transition: transform 120ms ease, box-shadow 120ms ease, border-color 120ms ease;
        }
        .btn:hover {
            transform: translateY(-1px);
            box-shadow: 0 16px 40px rgba(90,167,255,0.2);
            border-color: rgba(90,167,255,0.65);
        }
        .chat-launcher {
            position: fixed;
            right: 18px;
            bottom: 18px;
            width: 54px;
            height: 54px;
            border-radius: 14px;
            border: 1px solid var(--border);
            background: linear-gradient(135deg, var(--accent), var(--accent-2));
            color: #fff;
            display: inline-flex;
            align-items: center;
            justify-content: center;
            box-shadow: var(--glow);
            cursor: pointer;
            z-index: 20;
            transition: transform 120ms ease, box-shadow 120ms ease, opacity 150ms ease;
        }
        .chat-launcher:hover { transform: translateY(-2px); box-shadow: 0 18px 50px rgba(22,194,246,0.28); }
        .chat-panel {
            position: fixed;
            right: 18px;
            bottom: 84px;
            width: 340px;
            max-width: calc(100vw - 24px);
            background: var(--panel);
            border: 1px solid var(--border);
            border-radius: 16px;
            box-shadow: 0 18px 70px rgba(0,0,0,0.55);
            display: none;
            flex-direction: column;
            overflow: hidden;
            z-index: 20;
        }
        [data-theme="light"] .chat-panel { background: #ffffff; box-shadow: 0 14px 50px rgba(15,23,42,0.1); }
        .chat-panel.open { display: flex; }
        .chat-header {
            padding: 14px 14px 12px;
            border-bottom: 1px solid var(--border);
            display: flex;
            align-items: center;
            justify-content: space-between;
            gap: 8px;
        }
        .chat-header h4 {
            margin: 0;
            font-size: 1rem;
            color: var(--text);
        }
        .chat-header small { color: var(--muted); }
        .chat-messages {
            padding: 14px;
            display: flex;
            flex-direction: column;
            gap: 10px;
            max-height: 320px;
            overflow-y: auto;
            background: linear-gradient(180deg, rgba(255,255,255,0.01), rgba(255,255,255,0));
        }
        .chat-bubble {
            padding: 10px 12px;
            border-radius: 12px;
            max-width: 88%;
            font-size: 0.96rem;
            line-height: 1.45;
            white-space: pre-line;
        }
        .chat-bubble.bot {
            background: rgba(90,167,255,0.12);
            border: 1px solid rgba(90,167,255,0.35);
            color: var(--text);
            align-self: flex-start;
        }
        .chat-bubble.user {
            background: rgba(255,255,255,0.06);
            border: 1px solid rgba(255,255,255,0.1);
            color: var(--text);
            align-self: flex-end;
        }
        [data-theme="light"] .chat-bubble.bot { background: rgba(37,99,235,0.12); border-color: rgba(37,99,235,0.28); }
        [data-theme="light"] .chat-bubble.user { background: rgba(11,21,43,0.04); border-color: rgba(11,21,43,0.08); }
        .chat-input {
            padding: 12px 14px;
            border-top: 1px solid var(--border);
            display: flex;
            gap: 8px;
        }
        .chat-input input {
            flex: 1;
            border: 1px solid var(--border);
            background: rgba(255,255,255,0.04);
            color: var(--text);
            padding: 10px 12px;
            border-radius: 10px;
            outline: none;
        }
        .chat-input input:focus { border-color: rgba(90,167,255,0.65); }
        .chat-input button {
            border: 1px solid rgba(90,167,255,0.6);
            background: linear-gradient(135deg, var(--accent), var(--accent-2));
            color: #fff;
            border-radius: 10px;
            padding: 10px 14px;
            cursor: pointer;
            transition: transform 120ms ease, box-shadow 120ms ease;
        }
        .chat-input button:hover { transform: translateY(-1px); box-shadow: 0 12px 30px rgba(22,194,246,0.25); }
        .chat-actions {
            display: flex;
            gap: 8px;
            margin-top: 4px;
        }
        .chat-actions button {
            flex: 1;
            border-radius: 10px;
            padding: 10px 12px;
            border: 1px solid var(--border);
            background: rgba(255,255,255,0.04);
            color: var(--text);
            cursor: pointer;
        }
        .chat-actions button.primary {
            border-color: rgba(90,167,255,0.6);
            background: linear-gradient(135deg, var(--accent), var(--accent-2));
            color: #fff;
        }
        .chat-close {
            background: none;
            border: none;
            color: var(--muted);
            cursor: pointer;
            padding: 6px;
            border-radius: 8px;
        }
        .chat-close:hover { background: rgba(255,255,255,0.06); color: var(--text); }
    </style>
</head>
<body>
    <header>
        <a class="brand" href="/">
            <span class="brand-logo">
                <img src="/sitelogo.png" alt="Bianalytics" width="26" height="26" loading="lazy">
            </span>
            Bianalytics
        </a>
        <nav class="nav">
            <a href="/" class="nav-link">Ana Sayfa</a>
            <a href="/blog" class="nav-link">Blog</a>
            <a href="/solutions" class="nav-link">Çözümler</a>
            <a href="/sectors" class="nav-link">Sektörler</a>
        </nav>
        <div class="right-actions">
            <button id="themeToggle" class="theme-toggle" aria-label="Tema değiştir">Tema Değiştir</button>
        </div>
    </header>
    <main>
        <div class="panel">
            @RenderBody()
        </div>
    </main>
    <footer></footer>
    <button class="chat-launcher" id="chatLauncher" aria-label="Bizimle sohbet edin">
        <svg width="20" height="20" viewBox="0 0 24 24" fill="none" aria-hidden="true">
            <path d="M6 10.5C6 7.46243 8.46243 5 11.5 5H12.5C15.5376 5 18 7.46243 18 10.5C18 13.5376 15.5376 16 12.5 16H11L8 19V13.5" stroke="white" stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round"/>
        </svg>
    </button>
    <div class="chat-panel" id="chatPanel" aria-live="polite">
        <div class="chat-header">
            <div>
                <h4>Sohbet Asistanı</h4>
                <small>Bilgilerinizi paylaşın, ekibimize iletelim.</small>
            </div>
            <button class="chat-close" id="chatClose" aria-label="Sohbeti kapat">✕</button>
        </div>
        <div class="chat-messages" id="chatMessages"></div>
        <form class="chat-input" id="chatForm">
            <input type="text" id="chatInput" autocomplete="off" placeholder="Yanıtınızı yazın..." />
            <button type="submit">Gönder</button>
        </form>
    </div>
</body>
<script>
    (function() {
        const root = document.documentElement;
        const toggle = document.getElementById('themeToggle');
        const saved = localStorage.getItem('bianlytics-theme');
        if (saved === 'light' || saved === 'dark') root.setAttribute('data-theme', saved);
        toggle?.addEventListener('click', () => {
            const current = root.getAttribute('data-theme') === 'light' ? 'dark' : 'light';
            root.setAttribute('data-theme', current);
            localStorage.setItem('bianlytics-theme', current);
        });
    })();
    (function () {
        const launcher = document.getElementById('chatLauncher');
        const panel = document.getElementById('chatPanel');
        const closeBtn = document.getElementById('chatClose');
        const messagesEl = document.getElementById('chatMessages');
        const form = document.getElementById('chatForm');
        const input = document.getElementById('chatInput');

                if (!launcher || !panel || !form || !input || !messagesEl) return;

        const emailRegex = /^[^\s]+\u0040[^\s]+\.[^\s]+$/;
        const steps = [
            { key: 'adSoyad', prompt: 'Merhaba! Adiniz ve soyadiniz nedir?', validator: (v) => v.trim().length > 2, error: 'Lutfen ad soyad bilgisi girin.' },
            { key: 'eposta', prompt: 'E-posta adresinizi alabilir miyim?', validator: (v) => emailRegex.test(v.trim()), error: 'Gecerli bir e-posta adresi girin.' },
            { key: 'telefon', prompt: 'Telefon numaraniz nedir?', validator: (v) => v.replace(/\D/g, '').length >= 10, error: 'Lutfen gecerli bir telefon numarasi girin.' },
            { key: 'tip', prompt: 'Sirket olarak mi yoksa sahis olarak mi iletisime geciyorsunuz? (Sirket/Sahis)', validator: (v) => /sirket|sahis/i.test(v), error: 'Lutfen "Sirket" veya "Sahis" belirtin.' },
            { key: 'konuAciklamasi', prompt: 'Konu veya ihtiyacinizi kisaca yazar misiniz?', validator: (v) => v.trim().length > 5, error: 'Lutfen konuyu bir kac kelimeyle aciklayin.' }
        ];







        const state = { step: 0, data: {}, sending: false, started: false };

        function addMessage(text, from = 'bot') {
            const bubble = document.createElement('div');
            bubble.className = `chat-bubble ${from}`;
            bubble.textContent = text;
            messagesEl.appendChild(bubble);
            messagesEl.scrollTop = messagesEl.scrollHeight;
        }

        function askNext() {
            if (state.step >= steps.length) {
                const summary = [
                    `Ad Soyad: ${state.data.adSoyad || ''}`,
                    `E-posta: ${state.data.eposta || ''}`,
                    `Telefon: ${state.data.telefon || ''}`,
                    `Tip: ${state.data.tip || ''}`,
                    `Konu: ${state.data.konuAciklamasi || ''}`
                ].join('\\n');
                addMessage('Teşekkürler, bilgileri şöyle not aldım:\\n\\n' + summary);
                showConfirmation();
                return;
            }
            const { prompt } = steps[state.step];
            addMessage(prompt);
            input.placeholder = prompt;
            input.focus();
        }

        function showConfirmation() {
            const actions = document.createElement('div');
            actions.className = 'chat-actions';

            const sendBtn = document.createElement('button');
            sendBtn.type = 'button';
            sendBtn.className = 'primary';
            sendBtn.textContent = 'Gönder';
            sendBtn.onclick = () => {
                actions.remove();
                sendData();
            };

            const editBtn = document.createElement('button');
            editBtn.type = 'button';
            editBtn.textContent = 'Düzenle';
            editBtn.onclick = () => {
                actions.remove();
                state.step = 0;
                askNext();
            };

            actions.appendChild(sendBtn);
            actions.appendChild(editBtn);
            messagesEl.appendChild(actions);
            messagesEl.scrollTop = messagesEl.scrollHeight;
        }

        function sendData() {
            if (state.sending) return;
            state.sending = true;
            addMessage('Bilgilerinizi iletiyoruz, lütfen bekleyin...');
            input.disabled = true;

            fetch('/contactbot/submit', {
                method: 'POST',
                headers: { 'Content-Type': 'application/json' },
                body: JSON.stringify({
                    adSoyad: state.data.adSoyad,
                    eposta: state.data.eposta,
                    telefon: state.data.telefon,
                    tip: state.data.tip,
                    konuAciklamasi: state.data.konuAciklamasi
                })
            })
                .then(async (resp) => {
                    if (resp.ok) {
                        addMessage('Teşekkürler! Bilgileriniz ekibimize iletildi. En kısa sürede dönüş yapacağız.');
                        return;
                    }
                    const text = await resp.text();
                    throw new Error(text || 'Gönderim başarısız oldu.');
                })
                .catch((err) => {
                    addMessage('Gönderim sırasında bir sorun oluştu. Lütfen tekrar deneyin.');
                    console.error(err);
                })
                .finally(() => {
                    state.sending = false;
                    input.disabled = false;
                    state.step = 0;
                    state.data = {};
                    askNext();
                });
        }

        function handleSubmit(event) {
            event.preventDefault();
            if (state.sending) return;
            const value = input.value.trim();
            if (!value) return;

            addMessage(value, 'user');
            const current = steps[state.step];
            if (!current) return;

            if (!current.validator(value)) {
                addMessage(current.error);
                input.value = '';
                return;
            }

            state.data[current.key] = value;
            state.step += 1;
            input.value = '';
            askNext();
        }

        function openPanel() {
            panel.classList.add('open');
            if (!state.started) {
                state.started = true;
                askNext();
            }
            input.focus();
        }

        function closePanel() {
            panel.classList.remove('open');
        }

        launcher.addEventListener('click', () => {
            if (panel.classList.contains('open')) {
                closePanel();
            } else {
                openPanel();
            }
        });
        closeBtn.addEventListener('click', closePanel);
        form.addEventListener('submit', handleSubmit);
    })();
</script>
</html>
