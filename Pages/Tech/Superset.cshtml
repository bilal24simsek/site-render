@page "/tech/superset"
@{
    Layout = "_RevizeLayout";
    ViewData["Title"] = "Apache Superset";
}

<div class="px-4 sm:px-8 lg:px-10 flex flex-1 justify-center py-10">
    <div class="layout-content-container flex flex-col max-w-5xl flex-1 gap-6">
