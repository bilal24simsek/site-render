@page "/urunlerimiz"
@{
    Layout = "_RevizeLayout";
    ViewData["Title"] = "Ürünler Karargahı";
}

@* Hero Section *@
<section class="relative w-full mb-16 lg:mb-24">
    <div class="hero-wrapper relative w-full h-[500px] lg:h-[650px] overflow-hidden bg-slate-900">
         <div id="particles-js-products-main" class="absolute inset-0 z-20 pointer-events-none mix-blend-screen opacity-40"></div>
         <div class="absolute inset-0 bg-gradient-to-tr from-blue-900/40 via-transparent to-purple-900/40 z-10"></div>
         
         <div class="hero-slide active h-full w-full absolute inset-0 flex items-center justify-center text-center px-4">
             <div class="hero-bg absolute inset-0 bg-[url('https://images.unsplash.com/photo-1451187580459-43490279c0fa?auto=format&fit=crop&w=1600&q=80')] bg-cover bg-center opacity-40"></div>
             <div class="hero-content relative z-30 max-w-5xl mx-auto" data-aos="fade-up">
                <span class="inline-block py-1.5 px-4 rounded-full bg-blue-500/20 text-blue-200 text-xs md:text-sm font-bold uppercase tracking-[0.3em] backdrop-blur-md border border-blue-500/30 mb-8">Üretken Veri Teknolojileri</span>
                <h1 class="text-5xl md:text-8xl font-black text-white leading-tight tracking-tighter mb-8">Büyük Veri,<br/><span class="text-transparent bg-clip-text bg-gradient-to-r from-blue-400 via-indigo-400 to-purple-400">Gerçek Zeka.</span></h1>
                <p class="text-slate-300 text-lg md:text-2xl font-light max-w-3xl mx-auto leading-relaxed">
                    Uçtan uca veri analitiği, enerji yönetimi ve ETL çözümleriyle dijital dönüşümünüzü hızlandırıyoruz.
                </p>
             </div>
         </div>
    </div>
</section>

@* HQ Grid *@
<section class="py-24 px-4">
    <div class="max-w-7xl mx-auto">
        <div class="grid lg:grid-cols-2 gap-8">
            
            <!-- YEMVARS -->
            <div class="group relative bg-white dark:bg-slate-900 p-1 bg-gradient-to-br from-blue-500/20 to-transparent rounded-[2.5rem] border border-slate-200 dark:border-white/5 overflow-hidden" data-aos="fade-up">
                <div class="bg-white dark:bg-slate-950 p-10 h-full rounded-[2.3rem] flex flex-col">
                    <div class="flex justify-between items-start mb-12">
                        <div class="w-20 h-20 bg-blue-500/10 rounded-3xl flex items-center justify-center text-blue-500">
                            <span class="material-symbols-outlined text-5xl">bolt</span>
                        </div>
                        <span class="text-[10px] font-black tracking-widest uppercase py-1 px-3 bg-blue-500 text-white rounded-full shadow-lg shadow-blue-500/30">Enerji</span>
                    </div>
                    <h3 class="text-3xl font-black text-slate-900 dark:text-white mb-4">YEMVARS</h3>
                    <p class="text-slate-500 dark:text-slate-400 mb-10 flex-grow font-medium leading-relaxed">
                        Yenilenebilir Enerji İzleme ve Veri Analiz Platformu. Saha operasyonlarını robotik otomasyonla dijitalleştirin.
                    </p>
                    <a href="/urunler/yemvars" class="w-full py-4 bg-slate-50 dark:bg-white/5 border border-slate-200 dark:border-white/10 text-center font-black rounded-2xl hover:bg-primary hover:text-white hover:border-primary transition-all group-hover:shadow-xl group-hover:shadow-primary/20">DETAYLARI İNCELE</a>
                </div>
            </div>

            <!-- HawkETL -->
            <div class="group relative bg-white dark:bg-slate-900 p-1 bg-gradient-to-br from-orange-500/20 to-transparent rounded-[2.5rem] border border-slate-200 dark:border-white/5 overflow-hidden" data-aos="fade-up" data-aos-delay="100">
                <div class="bg-white dark:bg-slate-950 p-10 h-full rounded-[2.3rem] flex flex-col">
                    <div class="flex justify-between items-start mb-12">
                        <div class="w-20 h-20 bg-orange-500/10 rounded-3xl flex items-center justify-center text-orange-500">
                            <span class="material-symbols-outlined text-5xl">conversion_path</span>
                        </div>
                        <span class="text-[10px] font-black tracking-widest uppercase py-1 px-3 bg-orange-500 text-white rounded-full shadow-lg shadow-orange-500/30">ETL Engine</span>
                    </div>
                    <h3 class="text-3xl font-black text-slate-900 dark:text-white mb-4">HawkETL</h3>
                    <p class="text-slate-500 dark:text-slate-400 mb-10 flex-grow font-medium leading-relaxed">
                        Karmaşık veri boru hatlarını saniyeler içinde yönetin. Yüksek performanslı veri entegrasyonu ve dönüşüm motoru.
                    </p>
                    <a href="/urunler/hawketl" class="w-full py-4 bg-slate-50 dark:bg-white/5 border border-slate-200 dark:border-white/10 text-center font-black rounded-2xl hover:bg-orange-600 hover:text-white hover:border-orange-600 transition-all group-hover:shadow-xl group-hover:shadow-orange-600/20">DETAYLARI İNCELE</a>
                </div>
            </div>

            <!-- BIAnalytics -->
            <div class="group relative bg-white dark:bg-slate-900 p-1 bg-gradient-to-br from-indigo-500/20 to-transparent rounded-[2.5rem] border border-slate-200 dark:border-white/5 overflow-hidden" data-aos="fade-up">
                <div class="bg-white dark:bg-slate-950 p-10 h-full rounded-[2.3rem] flex flex-col">
                    <div class="flex justify-between items-start mb-12">
                        <div class="w-20 h-20 bg-indigo-500/10 rounded-3xl flex items-center justify-center text-indigo-500">
                            <span class="material-symbols-outlined text-5xl">dashboard</span>
                        </div>
                        <span class="text-[10px] font-black tracking-widest uppercase py-1 px-3 bg-indigo-500 text-white rounded-full shadow-lg shadow-indigo-500/30">Analytics</span>
                    </div>
                    <h3 class="text-3xl font-black text-slate-900 dark:text-white mb-4">BIAnalytics</h3>
                    <p class="text-slate-500 dark:text-slate-400 mb-10 flex-grow font-medium leading-relaxed">
                        İş zekasını tablolardan dashboardlara taşıyın. Veriyi sanata, içgörüyü stratejiye dönüştüren vizyoner platform.
                    </p>
                    <a href="/urunler/bianalytics" class="w-full py-4 bg-slate-50 dark:bg-white/5 border border-slate-200 dark:border-white/10 text-center font-black rounded-2xl hover:bg-indigo-600 hover:text-white hover:border-indigo-600 transition-all group-hover:shadow-xl group-hover:shadow-indigo-600/20">DETAYLARI İNCELE</a>
                </div>
            </div>

            <!-- EDVARS -->
            <div class="group relative bg-white dark:bg-slate-900 p-1 bg-gradient-to-br from-green-500/20 to-transparent rounded-[2.5rem] border border-slate-200 dark:border-white/5 overflow-hidden" data-aos="fade-up" data-aos-delay="100">
                <div class="bg-white dark:bg-slate-950 p-10 h-full rounded-[2.3rem] flex flex-col">
                    <div class="flex justify-between items-start mb-12">
                        <div class="w-20 h-20 bg-green-500/10 rounded-3xl flex items-center justify-center text-green-500">
                            <span class="material-symbols-outlined text-5xl">fact_check</span>
                        </div>
                        <span class="text-[10px] font-black tracking-widest uppercase py-1 px-3 bg-green-600 text-white rounded-full shadow-lg shadow-green-600/30">Compliance</span>
                    </div>
                    <h3 class="text-3xl font-black text-slate-900 dark:text-white mb-4">EDVARS</h3>
                    <p class="text-slate-500 dark:text-slate-400 mb-10 flex-grow font-medium leading-relaxed">
                        Enerji Veri Doğrulama ve Raporlama. EPDK uyumluluğu ve resmi raporlamada tek yasal güvenceniz.
                    </p>
                    <a href="/urunler/edvars" class="w-full py-4 bg-slate-50 dark:bg-white/5 border border-slate-200 dark:border-white/10 text-center font-black rounded-2xl hover:bg-green-600 hover:text-white hover:border-green-600 transition-all group-hover:shadow-xl group-hover:shadow-green-600/20">DETAYLARI İNCELE</a>
                </div>
            </div>

        </div>
    </div>
</section>

@section Scripts {
    <script src="https://cdn.jsdelivr.net/particles.js/2.0.0/particles.min.js"></script>
    <script>
        if(window.particlesJS) {
            particlesJS('particles-js-products-main', {
                "particles": {
                    "number": { "value": 50, "density": { "enable": true, "value_area": 800 } },
                    "color": { "value": "#ffffff" },
                    "shape": { "type": "circle" },
                    "opacity": { "value": 0.2, "random": false },
                    "size": { "value": 2, "random": false },
                    "line_linked": { "enable": true, "distance": 150, "color": "#ffffff", "opacity": 0.1, "width": 1 },
                    "move": { "enable": true, "speed": 1, "direction": "none", "random": false, "straight": false, "out_mode": "out", "bounce": false }
                },
                "interactivity": { "detect_on": "canvas", "events": { "onhover": { "enable": true, "mode": "grab" }, "onclick": { "enable": false }, "resize": true } },
                "retina_detect": true
            });
        }
    </script>
}
